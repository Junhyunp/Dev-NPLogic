<Window x:Class="NPLogic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="NPLogic - 등기부등본 자동화 시스템" 
        Height="768" Width="1366"
        MinHeight="720" MinWidth="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>      <!-- Header -->
            <RowDefinition Height="*"/>       <!-- Content -->
            <RowDefinition Height="30"/>      <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}"
                BorderBrush="{StaticResource PrimaryDarkBrush}"
                BorderThickness="0,0,0,1">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo & Title -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="FileDocument" 
                                           Width="32" Height="32"
                                           Foreground="White"
                                           Margin="0,0,12,0"/>
                    <TextBlock Text="NPLogic" 
                              Style="{StaticResource H3TextStyle}"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- User Info & Actions -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <Button Style="{StaticResource IconButton}"
                            ToolTip="알림"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="Bell" 
                                               Width="20" Height="20"
                                               Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}"
                            ToolTip="설정"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="Cog" 
                                               Width="20" Height="20"
                                               Foreground="White"/>
                    </Button>
                    <Separator Width="1" 
                              Height="24" 
                              Background="#FFFFFF40"
                              Margin="8,0"/>
                    <Button Style="{StaticResource IconButton}"
                            ToolTip="사용자 정보"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="Account" 
                                               Width="20" Height="20"
                                               Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with Sidebar -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>   <!-- Sidebar -->
                <ColumnDefinition Width="*"/>     <!-- Content -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" 
                    Background="{StaticResource PrimaryBrush}"
                    BorderBrush="{StaticResource PrimaryDarkBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation Menu -->
                    <ScrollViewer Grid.Row="0" 
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8">
                        <StackPanel>
                            <!-- Dashboard -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Height="48"
                                   HorizontalContentAlignment="Stretch"
                                   Margin="0,4"
                                   Padding="12,0"
                                   Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Left" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2A3442"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewDashboard" 
                                                           Width="20" Height="20"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="대시보드" 
                                              Foreground="White"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"
                                              FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- Property List -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Height="48"
                                   HorizontalContentAlignment="Stretch"
                                   Margin="0,4"
                                   Padding="12,0"
                                   Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Left" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2A3442"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewList" 
                                                           Width="20" Height="20"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="물건 목록" 
                                              Foreground="White"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"
                                              FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- Data Upload -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Height="48"
                                   HorizontalContentAlignment="Stretch"
                                   Margin="0,4"
                                   Padding="12,0"
                                   Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Left" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2A3442"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Upload" 
                                                           Width="20" Height="20"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="데이터 업로드" 
                                              Foreground="White"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"
                                              FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- Statistics -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Height="48"
                                   HorizontalContentAlignment="Stretch"
                                   Margin="0,4"
                                   Padding="12,0"
                                   Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Left" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2A3442"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChartBar" 
                                                           Width="20" Height="20"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="통계 분석" 
                                              Foreground="White"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"
                                              FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Separator Background="#FFFFFF20" Margin="8,16"/>

                            <!-- Admin Section -->
                            <TextBlock Text="관리" 
                                      Foreground="#FFFFFF80"
                                      Margin="12,8"
                                      FontSize="12"/>

                            <!-- User Management -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Height="48"
                                   HorizontalContentAlignment="Stretch"
                                   Margin="0,4"
                                   Padding="12,0"
                                   Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Left" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2A3442"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountMultiple" 
                                                           Width="20" Height="20"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="사용자 관리" 
                                              Foreground="White"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"
                                              FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- Settings -->
                            <Button Background="Transparent"
                                   BorderThickness="0"
                                   Height="48"
                                   HorizontalContentAlignment="Stretch"
                                   Margin="0,4"
                                   Padding="12,0"
                                   Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Left" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2A3442"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Cog" 
                                                           Width="20" Height="20"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="설정" 
                                              Foreground="White"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"
                                              FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Toggle Sidebar Button -->
                    <Button Grid.Row="1"
                           Background="Transparent"
                           BorderThickness="0"
                           Height="48"
                           HorizontalContentAlignment="Center"
                           Margin="8"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2A3442"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <materialDesign:PackIcon Kind="ChevronLeft" 
                                               Width="24" Height="24"
                                               Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Border Grid.Column="1" 
                    Background="{StaticResource BackgroundBrush}"
                    Padding="32">
                <Grid>
                    <!-- Content Frame (Views will be loaded here) -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Welcome Card -->
                            <Border Background="{StaticResource SurfaceBrush}"
                                   BorderBrush="{StaticResource BorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="24"
                                   Margin="0,0,0,24">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                    Opacity="0.1" 
                                                    BlurRadius="3" 
                                                    ShadowDepth="1"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="NPLogic 등기부등본 자동화 시스템에 오신 것을 환영합니다!"
                                              Style="{StaticResource H2TextStyle}"
                                              Margin="0,0,0,16"/>
                                    <TextBlock Text="초기 설정이 완료되었습니다. 이제 개발을 시작할 준비가 되었습니다."
                                              Style="{StaticResource BodyTextStyle}"
                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Quick Stats -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Stat Card 1 -->
                                <Border Grid.Column="0"
                                       Background="{StaticResource SurfaceBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="20"
                                       Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="전체 물건"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Margin="0,0,0,8"/>
                                        <TextBlock Text="0"
                                                  Style="{StaticResource H2TextStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Stat Card 2 -->
                                <Border Grid.Column="1"
                                       Background="{StaticResource SurfaceBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="20"
                                       Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="진행중"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Margin="0,0,0,8"/>
                                        <TextBlock Text="0"
                                                  Style="{StaticResource H2TextStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Stat Card 3 -->
                                <Border Grid.Column="2"
                                       Background="{StaticResource SurfaceBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="20"
                                       Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="완료"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Margin="0,0,0,8"/>
                                        <TextBlock Text="0"
                                                  Style="{StaticResource H2TextStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Stat Card 4 -->
                                <Border Grid.Column="3"
                                       Background="{StaticResource SurfaceBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="대기"
                                                  Style="{StaticResource SmallTextStyle}"
                                                  Margin="0,0,0,8"/>
                                        <TextBlock Text="0"
                                                  Style="{StaticResource H2TextStyle}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource BorderBrush}"
                BorderBrush="{StaticResource DividerBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,4">
            <Grid>
                <TextBlock Text="준비됨" 
                          Style="{StaticResource SmallTextStyle}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"/>
                <TextBlock Text="v1.0.0" 
                          Style="{StaticResource SmallTextStyle}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>



