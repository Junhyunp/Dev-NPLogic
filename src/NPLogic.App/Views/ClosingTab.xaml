<UserControl x:Class="NPLogic.Views.ClosingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:NPLogic.Controls;assembly=NPLogic.UI"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:PropertyDetailViewModel}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- ========== 마감 상태 헤더 ========== -->
            <Border Grid.Row="0"
                    CornerRadius="12"
                    Padding="24"
                    Margin="0,0,0,20">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsClosingComplete}" Value="True">
                                <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="15" ShadowDepth="3"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 마감 아이콘 -->
                    <Border Grid.Column="0" 
                            Width="60" Height="60" 
                            CornerRadius="30"
                            Margin="0,0,20,0"
                            VerticalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClosingComplete}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Foreground="White" 
                                   FontSize="{StaticResource FontSizeXLarge}" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="!"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsClosingComplete}" Value="True">
                                            <Setter Property="Text" Value="✓"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Margin="0,0,0,4">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource H2TextStyle}">
                                    <Setter Property="Text" Value="마감 대기"/>
                                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsClosingComplete}" Value="True">
                                            <Setter Property="Text" Value="마감 완료"/>
                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Opacity="0.8">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
                                    <Setter Property="Text" Value="모든 항목을 확인하고 마감 처리를 진행해주세요."/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsClosingComplete}" Value="True">
                                            <Setter Property="Text" Value="모든 검토가 완료되었습니다."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- 마감 버튼 -->
                    <Button Grid.Column="2"
                            Content="마감 처리"
                            Command="{Binding CompleteClosingCommand}"
                            Padding="24,12"
                            FontSize="{StaticResource FontSizeH4}"
                            FontWeight="Bold"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClosingComplete}" Value="True">
                                        <Setter Property="Content" Value="마감 취소"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            
            <!-- ========== 마감 체크리스트 ========== -->
            <Border Grid.Row="1"
                    Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>
                
                <controls:NPExpandableSection Header="마감 체크리스트" IsExpanded="True">
                    <StackPanel>
                        <!-- 마감요청 -->
                        <Border Background="{StaticResource BlueGray50Brush}"
                                CornerRadius="6"
                                Padding="16"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding ClosingChecklist.ClosingRequested}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="마감요청" 
                                               Style="{StaticResource BodyTextStyle}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="마감요청 여부 확인" 
                                               Style="{StaticResource CaptionTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <Border Grid.Column="2" CornerRadius="4" Padding="8,4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource BlueGray300Brush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ClosingChecklist.ClosingRequested}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Foreground="White" FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="미완료"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ClosingChecklist.ClosingRequested}" Value="True">
                                                        <Setter Property="Text" Value="완료"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- 낙찰여부 -->
                        <Border Background="{StaticResource BlueGray50Brush}"
                                CornerRadius="6"
                                Padding="16"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding ClosingChecklist.WinningBidConfirmed}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="낙찰여부" 
                                               Style="{StaticResource BodyTextStyle}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="낙찰 여부 확인" 
                                               Style="{StaticResource CaptionTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <Border Grid.Column="2" CornerRadius="4" Padding="8,4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource BlueGray300Brush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ClosingChecklist.WinningBidConfirmed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Foreground="White" FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="미완료"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ClosingChecklist.WinningBidConfirmed}" Value="True">
                                                        <Setter Property="Text" Value="완료"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- 비낙찰시 낙찰자 입찰가 -->
                        <Border Background="{StaticResource BlueGray50Brush}"
                                CornerRadius="6"
                                Padding="16"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="비낙찰시 낙찰자 입찰가" 
                                               Style="{StaticResource BodyTextStyle}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="비낙찰시 낙찰자의 입찰가 입력" 
                                               Style="{StaticResource CaptionTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                                    <TextBox Text="{Binding ClosingChecklist.WinnerBidAmount, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}"
                                             Width="180"
                                             Padding="8,6"
                                             HorizontalContentAlignment="Right"/>
                                    <TextBlock Text="원" 
                                               Style="{StaticResource BodyTextStyle}"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- 입찰물건 지도표시 -->
                        <Border Background="{StaticResource BlueGray50Brush}"
                                CornerRadius="6"
                                Padding="16"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding ClosingChecklist.MapDisplayConfirmed}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="입찰물건 지도표시" 
                                               Style="{StaticResource BodyTextStyle}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="입찰물건 지도 표시 완료" 
                                               Style="{StaticResource CaptionTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <Border Grid.Column="2" CornerRadius="4" Padding="8,4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource BlueGray300Brush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ClosingChecklist.MapDisplayConfirmed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Foreground="White" FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="미완료"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ClosingChecklist.MapDisplayConfirmed}" Value="True">
                                                        <Setter Property="Text" Value="완료"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- 용량 압축 -->
                        <Border Background="{StaticResource BlueGray50Brush}"
                                CornerRadius="6"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding ClosingChecklist.DataCompressed}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="용량 압축" 
                                               Style="{StaticResource BodyTextStyle}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="데이터 용량 압축 완료" 
                                               Style="{StaticResource CaptionTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <Border Grid.Column="2" CornerRadius="4" Padding="8,4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource BlueGray300Brush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ClosingChecklist.DataCompressed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Foreground="White" FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="미완료"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ClosingChecklist.DataCompressed}" Value="True">
                                                        <Setter Property="Text" Value="완료"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </controls:NPExpandableSection>
            </Border>
            
            <!-- ========== 권리분석 업데이트 알림 ========== -->
            <Border Grid.Row="2"
                    Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>
                
                <controls:NPExpandableSection Header="권리분석 업데이트 알림" IsExpanded="True">
                    <StackPanel>
                        <TextBlock Text="권리분석 업데이트 내역이 있으면 여기에 표시됩니다."
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- 알림 목록 (예시) -->
                        <ItemsControl ItemsSource="{Binding RightsAnalysisAlerts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource WarningLightBrush}"
                                            BorderBrush="{StaticResource WarningBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}" 
                                                           Style="{StaticResource BodyTextStyle}"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Style="{StaticResource CaptionTextStyle}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Date, StringFormat=yyyy-MM-dd}" 
                                                       Style="{StaticResource CaptionTextStyle}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- 빈 상태 -->
                        <Border Background="{StaticResource SuccessLightBrush}"
                                BorderBrush="{StaticResource SuccessBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="16"
                                Visibility="{Binding HasNoAlerts, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="✓ 확인이 필요한 권리분석 업데이트가 없습니다."
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource SuccessBrush}"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </controls:NPExpandableSection>
            </Border>
            
            <!-- ========== 마감 이력 ========== -->
            <Border Grid.Row="3"
                    Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>
                
                <controls:NPExpandableSection Header="마감 이력" IsExpanded="False">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="마감 일시" 
                                       Style="{StaticResource CaptionTextStyle}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding ClosingDate, StringFormat=yyyy-MM-dd HH:mm, TargetNullValue='-'}" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,8"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="마감 담당자" 
                                       Style="{StaticResource CaptionTextStyle}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding ClosingUser, TargetNullValue='-'}" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,8"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="비고" 
                                       Style="{StaticResource CaptionTextStyle}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,8"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding ClosingNote, UpdateSourceTrigger=PropertyChanged}" 
                                     AcceptsReturn="True"
                                     MinHeight="60"
                                     Padding="8,6"
                                     Margin="0,4"/>
                        </Grid>
                    </StackPanel>
                </controls:NPExpandableSection>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>

