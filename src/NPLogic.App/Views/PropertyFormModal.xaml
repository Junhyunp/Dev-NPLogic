<Window x:Class="NPLogic.Views.PropertyFormModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:NPLogic.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="700"
        Height="800"
        d:DataContext="{d:DesignInstance Type=vm:PropertyFormViewModel}">
    
    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="12"
            Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="24,20">
                <Grid>
                    <TextBlock Text="{Binding Title}" 
                               Style="{StaticResource H3TextStyle}"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="CloseButton_Click"
                            Style="{StaticResource IconButton}"
                            Foreground="White"
                            FontSize="{StaticResource FontSizeXLarge}"
                            Width="32"
                            Height="32"/>
                </Grid>
            </Border>

            <!-- 폼 컨텐츠 -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="24">
                <StackPanel>
                    <!-- 에러 메시지 -->
                    <Border Background="{StaticResource ErrorBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,16"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                  Foreground="White"
                                  TextWrapping="Wrap"/>
                    </Border>

                    <!-- 프로젝트 ID -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="프로젝트 ID *" 
                                   Style="{StaticResource BodyTextStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Property.ProjectId, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,10"/>
                    </StackPanel>

                    <!-- 물건번호 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="물건번호" 
                                   Style="{StaticResource BodyTextStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Property.PropertyNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,10"/>
                    </StackPanel>

                    <!-- 물건 유형 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="물건 유형 *" 
                                   Style="{StaticResource BodyTextStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding Property.PropertyType}"
                                  Padding="12,10">
                            <ComboBoxItem Content="아파트"/>
                            <ComboBoxItem Content="상가"/>
                            <ComboBoxItem Content="토지"/>
                            <ComboBoxItem Content="빌라"/>
                            <ComboBoxItem Content="오피스텔"/>
                            <ComboBoxItem Content="단독주택"/>
                            <ComboBoxItem Content="다가구주택"/>
                            <ComboBoxItem Content="공장"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- 주소 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="전체 주소 *" 
                                   Style="{StaticResource BodyTextStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Property.AddressFull, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,10"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 도로명 주소 -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="도로명 주소" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Property.AddressRoad, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"/>
                        </StackPanel>

                        <!-- 지번 주소 -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="지번 주소" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Property.AddressJibun, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"/>
                        </StackPanel>
                    </Grid>

                    <!-- 상세 주소 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="상세 주소" 
                                   Style="{StaticResource BodyTextStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Property.AddressDetail, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,10"/>
                    </StackPanel>

                    <!-- 면적 -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 토지 면적 -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="토지 면적 (㎡)" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding LandAreaText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"/>
                        </StackPanel>

                        <!-- 건물 면적 -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="건물 면적 (㎡)" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding BuildingAreaText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"/>
                        </StackPanel>
                    </Grid>

                    <!-- 층수 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="층수" 
                                   Style="{StaticResource BodyTextStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Property.Floors, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,10"/>
                    </StackPanel>

                    <!-- 금액 -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 감정가 -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="감정가 (원)" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding AppraisalValueText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"/>
                        </StackPanel>

                        <!-- 최저입찰가 -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="최저입찰가 (원)" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding MinimumBidText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"/>
                        </StackPanel>

                        <!-- 매각가 -->
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="매각가 (원)" 
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding SalePriceText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"/>
                        </StackPanel>
                    </Grid>

                    <!-- 상태 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="상태" 
                                   Style="{StaticResource BodyTextStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding Property.Status}"
                                  SelectedValuePath="Tag"
                                  Padding="12,10">
                            <ComboBoxItem Content="대기" Tag="pending"/>
                            <ComboBoxItem Content="진행중" Tag="processing"/>
                            <ComboBoxItem Content="완료" Tag="completed"/>
                        </ComboBox>
                    </StackPanel>

                    <TextBlock Text="* 필수 입력 항목" 
                               Style="{StaticResource CaptionTextStyle}"
                               Opacity="0.6"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 버튼 영역 -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BlueGray50Brush}"
                    CornerRadius="0,0,12,12"
                    Padding="24,16">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="취소" 
                                Click="CloseButton_Click"
                                Style="{StaticResource SecondaryButton}"
                                Padding="24,10"
                                Margin="0,0,12,0"/>
                        <Button Content="{Binding SaveButtonText}" 
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Padding="24,10"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

