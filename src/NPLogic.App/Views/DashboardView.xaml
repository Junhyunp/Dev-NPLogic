<UserControl x:Class="NPLogic.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             Loaded="DashboardView_Loaded"
             Focusable="True"
             PreviewKeyDown="DashboardView_PreviewKeyDown">
    
    <UserControl.Resources>
        <!-- 영역 토글 버튼 스타일 -->
        <Style x:Key="PanelToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 프로그램 리스트 아이템 스타일 -->
        <Style x:Key="ProgramListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BlueGray200Brush}"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3,0,0,1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 내부 탭 버튼 스타일 - 피드백 반영: 크기 축소 -->
        <Style x:Key="InnerTabButton" TargetType="RadioButton">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd" 
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- 로딩 오버레이 -->
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="100">
            <Border Background="{StaticResource OverlaySemiLightBrush}"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,16"/>
                <TextBlock Text="데이터 로드 중..." 
                           Style="{StaticResource BodyTextStyle}"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
            </StackPanel>
        </Grid>

        <!-- 에러 메시지 오버레이 -->
        <Grid Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              d:Visibility="Collapsed"
              Background="{StaticResource OverlayBrush}"
              Panel.ZIndex="100">
            <Border Background="{StaticResource ErrorBrush}"
                    CornerRadius="8"
                    Padding="24"
                    MaxWidth="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="White"
                               TextWrapping="Wrap"
                               FontSize="{StaticResource FontSizeH4}"/>
                    <Button Content="닫기" 
                            Command="{Binding ClearErrorCommand}"
                            Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 메인 레이아웃 -->
        <Grid Margin="16,8,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 헤더 영역 (한 줄로 통합: 타이틀 + 뱃지 + 브레드크럼 + 프로그램 건수 + 버튼) -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BlueGray50Brush}"
                    CornerRadius="4"
                    Padding="12,8"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 좌측: 패널 열기 버튼 + 대시보드 + 뱃지 + 담당자 + 브레드크럼 + 프로그램 건수 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- 좌측 패널 열기 버튼 (패널 접혔을 때만 표시) - 상단 헤더에 통합 -->
                        <ToggleButton x:Name="LeftPanelOpenButton"
                                      Style="{StaticResource PanelToggleButton}"
                                      Visibility="Collapsed"
                                      Click="LeftPanelOpen_Click"
                                      ToolTip="담보 목록 열기"
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Menu" Width="18" Height="18"/>
                        </ToggleButton>
                        <TextBlock Text="대시보드" 
                                   Style="{StaticResource H3TextStyle}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <!-- 역할 뱃지 -->
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="4"
                                Padding="5,2"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Visibility="{Binding CurrentUser, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding RoleBadgeText}" 
                                       Foreground="White"
                                       FontSize="{StaticResource FontSizeSmall}"
                                       FontWeight="SemiBold"/>
                        </Border>
                        <TextBlock Style="{StaticResource BodyTextStyle}"
                                   VerticalAlignment="Center"
                                   Opacity="0.7"
                                   FontSize="{StaticResource FontSizeSmall}"
                                   Margin="0,0,12,0">
                            <Run Text="담당자:"/>
                            <Run Text="{Binding CurrentUser.Name, FallbackValue='로그인 필요'}" FontWeight="SemiBold"/>
                        </TextBlock>
                        
                        <!-- 구분선 -->
                        <Rectangle Width="1" Height="16" Fill="{StaticResource BlueGray300Brush}" Margin="0,0,12,0"
                                   Visibility="{Binding SelectedProgram, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- 브레드크럼 (프로그램 선택 시만 표시) -->
                        <StackPanel x:Name="BreadcrumbPanel" Orientation="Horizontal" VerticalAlignment="Center"
                                    Visibility="{Binding SelectedProgram, Converter={StaticResource NullToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="MapMarker" 
                                                     Width="12" Height="12" 
                                                     VerticalAlignment="Center"
                                                     Foreground="{StaticResource TextSecondaryBrush}"
                                                     Margin="0,0,4,0"/>
                            <!-- 프로그램명 -->
                            <TextBlock x:Name="BreadcrumbProgram"
                                       Text="{Binding SelectedProgram.ProjectName}"
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Cursor="Hand"
                                       MouseLeftButtonDown="Breadcrumb_Program_Click"
                                       ToolTip="담보 목록으로 이동"/>
                            
                            <!-- 물건번호 + 차주명 (물건 선택 시 = 상세 모드) -->
                            <TextBlock x:Name="BreadcrumbPropertySeparator"
                                       Text=" › " 
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsDetailMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <StackPanel x:Name="BreadcrumbProperty"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsDetailMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding SelectedProperty.CollateralNumber}"
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text=" ("
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding SelectedProperty.DebtorName}"
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text=")"
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                            
                            <!-- 현재 탭명 (상세 모드에서 탭 선택 시) -->
                            <TextBlock x:Name="BreadcrumbTabSeparator"
                                       Text=" › " 
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding CurrentTabName, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock x:Name="BreadcrumbTab"
                                       Text="{Binding CurrentTabName}"
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding CurrentTabName, Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <!-- 프로그램 건수 (목록 모드에서만 표시) -->
                            <TextBlock FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Visibility="{Binding IsDetailMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <Run Text="("/>
                                <Run Text="{Binding SelectedProgram.TotalCount}"/>
                                <Run Text="건)"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- 우측 버튼들 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Command="{Binding RefreshDataCommand}"
                                Style="{StaticResource IconButton}"
                                Width="28" Height="28"
                                Margin="0,0,4,0"
                                ToolTip="새로고침 (Ctrl+R)">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource SecondaryButton}"
                                Padding="6,3"
                                Margin="0,0,4,0"
                                Click="RollupButton_Click"
                                ToolTip="전체 현황 창 열기 (비핵심 전체 데이터 한눈에 보기)">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TableLarge" 
                                                         Width="12" Height="12" 
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,3,0"/>
                                <TextBlock Text="롤업" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ExportToExcelCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Padding="6,3"
                                ToolTip="현재 데이터를 Excel 파일로 내보내기">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MicrosoftExcel" 
                                                         Width="12" Height="12" 
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,3,0"/>
                                <TextBlock Text="Excel" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2영역 레이아웃 (Phase 2.2, 2.4) - GridSplitter 제거, 토글 버튼 방식만 사용 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <!-- 좌측: 진행 중인 프로그램 (기본 펼친 상태) -->
                    <ColumnDefinition x:Name="LeftPanelColumn" Width="280" MinWidth="0"/>
                    <!-- 우측: 프로그램명 상세 -->
                    <ColumnDefinition Width="*" MinWidth="400"/>
                </Grid.ColumnDefinitions>

                <!-- ========== 좌측: 진행 중인 프로그램 (일반 모드) / 물건 리스트 (상세 모드) ========== -->
                <!-- 피드백 섹션 16: 네이비 테두리로 통일 (배경 + 네이비 테두리) -->
                <Border x:Name="LeftPanel"
                        Grid.Column="0"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8,0,0,8"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="2,2,0,2"
                        Visibility="Visible">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <!-- 일반 모드: 프로그램 목록 -->
                        <Grid x:Name="ProgramListPanel"
                              Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 좌측 패널 헤더 -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource BlueGray50Brush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="진행 중인 프로그램" 
                                               FontWeight="SemiBold"
                                               FontSize="{StaticResource FontSizeH4}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>

                                    <!-- 프로그램 추가 버튼 -->
                                    <Button Grid.Column="1"
                                            Content="+"
                                            Command="{Binding AddProgramCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Padding="6,2"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Margin="0,0,8,0"
                                            ToolTip="새 프로그램 등록"/>

                                    <!-- 좌측 패널 닫기/열기 토글 -->
                                    <ToggleButton x:Name="LeftPanelToggle"
                                                  Grid.Column="2"
                                                  Style="{StaticResource PanelToggleButton}"
                                                  IsChecked="True"
                                                  Click="LeftPanelToggle_Click"
                                                  ToolTip="패널 접기/펼치기">
                                        <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- 프로그램 목록 -->
                            <ListBox Grid.Row="1"
                                     x:Name="ProgramListBox"
                                     ItemsSource="{Binding ProgramSummaries}"
                                     SelectedItem="{Binding SelectedProgram}"
                                     SelectionChanged="ProgramListBox_SelectionChanged"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ItemContainerStyle="{StaticResource ProgramListItem}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- 프로그램명 -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding ProjectName}"
                                                       FontWeight="SemiBold"
                                                       FontSize="{StaticResource FontSizeH4}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>

                                            <!-- 담보 수 -->
                                            <TextBlock Grid.Row="1"
                                                       Margin="0,4,0,0"
                                                       FontSize="{StaticResource FontSizeBody}"
                                                       Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="담보"/>
                                                <Run Text="{Binding TotalCount}" FontWeight="SemiBold"/>
                                                <Run Text="건"/>
                                                <Run Text=" | "/>
                                                <Run Text="완료"/>
                                                <Run Text="{Binding CompletedCount}" FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}"/>
                                                <Run Text="건"/>
                                            </TextBlock>

                                            <!-- 진행률 바 -->
                                            <StackPanel Grid.Row="2" Margin="0,6,0,0">
                                                <ProgressBar Value="{Binding ProgressPercent, Mode=OneWay}" 
                                                             Maximum="100"
                                                             Height="6"
                                                             Foreground="{StaticResource SuccessBrush}"
                                                             Background="{StaticResource BlueGray200Brush}"/>
                                                <TextBlock HorizontalAlignment="Right"
                                                           Margin="0,4,0,0"
                                                           FontSize="{StaticResource FontSizeSmall}"
                                                           Foreground="{StaticResource TextSecondaryBrush}">
                                                    <Run Text="{Binding ProgressPercent, Mode=OneWay}"/>
                                                    <Run Text="%"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                        <!-- 상세 모드: 물건 리스트 -->
                        <Grid x:Name="PropertyListPanel"
                              Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 물건 리스트 헤더 -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource HeaderNavyBrush}"
                                    Padding="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 뒤로 버튼 -->
                                    <Button Grid.Column="0"
                                            Style="{StaticResource IconButton}"
                                            Click="PropertyListBackButton_Click"
                                            ToolTip="담보 목록으로 돌아가기"
                                            Margin="0,0,8,0">
                                        <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Foreground="White"/>
                                    </Button>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Home" 
                                                                 Width="16" Height="16" 
                                                                 Foreground="White"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="담보 목록" 
                                                   FontWeight="SemiBold"
                                                   FontSize="{StaticResource FontSizeH4}"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- 패널 닫기 토글 -->
                                    <ToggleButton x:Name="PropertyListPanelToggle"
                                                  Grid.Column="2"
                                                  Style="{StaticResource PanelToggleButton}"
                                                  IsChecked="True"
                                                  Click="LeftPanelToggle_Click"
                                                  ToolTip="패널 접기/펼치기">
                                        <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20" Foreground="White"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- 물건 리스트 -->
                            <ListBox Grid.Row="1"
                                     x:Name="PropertySideListBox"
                                     ItemsSource="{Binding DashboardProperties}"
                                     SelectedItem="{Binding SelectedProperty}"
                                     SelectionChanged="PropertySideListBox_SelectionChanged"
                                     Background="{StaticResource HeaderNavyBrush}"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="ItemBorder"
                                                            Background="Transparent"
                                                            BorderBrush="{StaticResource BlueGray300Brush}"
                                                            BorderThickness="0,0,0,1"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="#3F4E6B"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- 물건번호 -->
                                            <TextBlock Grid.Row="0"
                                                       FontSize="{StaticResource FontSizeBody}"
                                                       FontWeight="SemiBold"
                                                       Foreground="White">
                                                <Run Text="{Binding CollateralNumber, FallbackValue='-'}"/>
                                            </TextBlock>

                                            <!-- 차주번호 + 차주명 -->
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="{Binding BorrowerNumber}"
                                                           FontSize="{StaticResource FontSizeSmall}"
                                                           Foreground="#B0BEC5"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="60"/>
                                                <TextBlock Text=" | "
                                                           FontSize="{StaticResource FontSizeSmall}"
                                                           Foreground="#B0BEC5"/>
                                                <TextBlock Text="{Binding DebtorName}"
                                                           FontSize="{StaticResource FontSizeSmall}"
                                                           Foreground="#B0BEC5"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="100"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- 하단 정보 -->
                            <Border Grid.Row="2" 
                                    Background="#263238"
                                    Padding="12,8">
                                <TextBlock FontSize="{StaticResource FontSizeSmall}" 
                                           Foreground="#B0BEC5"
                                           HorizontalAlignment="Center">
                                    <Run Text="{Binding DashboardProperties.Count, Mode=OneWay}"/>
                                    <Run Text="건"/>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- ========== 우측: 프로그램명 상세 ========== -->
                <Border Grid.Column="1"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="0,8,8,0"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>  <!-- F-001: 고급 필터 패널 -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 내부 탭 메뉴 (상세 모드에서만 표시) -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Background="{StaticResource SurfaceBrush}"
                                x:Name="DetailModeTabs"
                                Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 목록으로 버튼 -->
                                <Button Grid.Column="0"
                                        x:Name="BackToListButton"
                                        Click="BackToListButton_Click"
                                        Style="{StaticResource IconButton}"
                                        Width="32" Height="32"
                                        Margin="8,4"
                                        ToolTip="목록으로 돌아가기">
                                    <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18"/>
                                </Button>
                                
                                <!-- 탭 버튼들 -->
                                <ScrollViewer Grid.Column="1"
                                              HorizontalScrollBarVisibility="Auto" 
                                              VerticalScrollBarVisibility="Disabled">
                                    <StackPanel Orientation="Horizontal" Margin="8,0">
                                        <RadioButton x:Name="TabNonCore" 
                                                     Content="비핵심" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     IsChecked="True"
                                                     Checked="InnerTab_Checked"/>
                                        <RadioButton x:Name="TabRegistry" 
                                                     Content="등기부등본" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     Checked="InnerTab_Checked"/>
                                        <RadioButton x:Name="TabRights" 
                                                     Content="권리분석" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     Checked="InnerTab_Checked"/>
                                        <RadioButton x:Name="TabBasicData" 
                                                     Content="기초데이터" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     Checked="InnerTab_Checked"/>
                                        <RadioButton x:Name="TabQASummary" 
                                                     Content="QA집계" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     Checked="InnerTab_Checked"/>
                                        <RadioButton x:Name="TabCashFlowSummary" 
                                                     Content="현금흐름집계" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     Checked="InnerTab_Checked"/>
                                        <RadioButton x:Name="TabNPVComparison" 
                                                     Content="NPV비교" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     Checked="InnerTab_Checked"/>
                                        <RadioButton x:Name="TabClosing" 
                                                     Content="마감" 
                                                     Style="{StaticResource InnerTabButton}"
                                                     GroupName="InnerTabs"
                                                     Checked="InnerTab_Checked"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- 컬럼별 진행률 표시 (Phase 2.6) - 접기/펼치기 가능, 물건 상세 진입 시 숨김 -->
                        <Border Grid.Row="1"
                                Background="{StaticResource BlueGray50Brush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Visibility="{Binding IsFilterBarAreaVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 펼쳐진 상태: 전체 필터/진행률 표시 -->
                                <ScrollViewer Grid.Column="0"
                                              HorizontalScrollBarVisibility="Auto" 
                                              VerticalScrollBarVisibility="Disabled"
                                              Visibility="{Binding IsFilterBarExpanded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                              Margin="16,10">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- 상태 필터 버튼 (전체/대기/진행/완료) - 더블클릭으로 필터링 -->
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="6,4"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="FilterAll"
                                                       Text="전체" 
                                                       Tag="all"
                                                       FontSize="{StaticResource FontSizeBody}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       Padding="8,4"
                                                       Cursor="Hand"
                                                       MouseLeftButtonDown="StatusFilter_MouseDown"
                                                       ToolTip="전체 보기"/>
                                            <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="4,2"/>
                                            <TextBlock x:Name="FilterPending"
                                                       Text="대기" 
                                                       Tag="pending"
                                                       FontSize="{StaticResource FontSizeBody}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Padding="8,4"
                                                       Cursor="Hand"
                                                       MouseLeftButtonDown="StatusFilter_MouseDown"
                                                       ToolTip="대기 항목만 보기"/>
                                            <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="4,2"/>
                                            <TextBlock x:Name="FilterProcessing"
                                                       Text="진행" 
                                                       Tag="processing"
                                                       FontSize="{StaticResource FontSizeBody}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Padding="8,4"
                                                       Cursor="Hand"
                                                       MouseLeftButtonDown="StatusFilter_MouseDown"
                                                       ToolTip="진행 중 항목만 보기"/>
                                            <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="4,2"/>
                                            <TextBlock x:Name="FilterCompleted"
                                                       Text="완료" 
                                                       Tag="completed"
                                                       FontSize="{StaticResource FontSizeBody}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Padding="8,4"
                                                       Cursor="Hand"
                                                       MouseLeftButtonDown="StatusFilter_MouseDown"
                                                       ToolTip="완료 항목만 보기"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- F-001: 고급 필터 토글 버튼 -->
                                    <Button Command="{Binding ToggleAdvancedFilterCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Padding="8,4"
                                            Margin="0,0,16,0"
                                            ToolTip="고급 필터 패널 열기/닫기">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FilterVariant" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="필터" VerticalAlignment="Center" FontSize="{StaticResource FontSizeSmall}"/>
                                            <Border Background="{StaticResource PrimaryBrush}" 
                                                    CornerRadius="8" 
                                                    Padding="4,1" 
                                                    Margin="4,0,0,0"
                                                    Visibility="{Binding ActiveFilterCount, Converter={StaticResource IntToVisibilityConverter}}">
                                                <TextBlock Text="{Binding ActiveFilterCount}" 
                                                           Foreground="White" 
                                                           FontSize="10" 
                                                           FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                    </Button>

                                    <!-- 진행률 항목들 -->
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="약정서" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.AgreementDocPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeBody}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="보증서" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.GuaranteeDocPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeBody}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="경매열람" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.AuctionDocsPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeBody}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="전입열람" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.TenantDocsPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeBody}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="선순위" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.SeniorRightsPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeBody}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="담보평가" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.AppraisalConfirmedPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeBody}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SuccessBgBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            BorderBrush="{StaticResource SuccessBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="전체 완료" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource SuccessTextBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.OverallPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeBody}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource SuccessTextBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    </StackPanel>
                                </ScrollViewer>
                                
                                <!-- 접힌 상태: 간략 표시 (전체 완료율만 표시) -->
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            Margin="16,6"
                                            Visibility="{Binding IsFilterBarExpanded, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <Border Background="{StaticResource SuccessBgBrush}"
                                            CornerRadius="4"
                                            Padding="10,4"
                                            BorderBrush="{StaticResource SuccessBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="전체 완료" FontSize="{StaticResource FontSizeSmall}" Foreground="{StaticResource SuccessTextBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.OverallPercent, StringFormat={}{0}%}" 
                                                       FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource SuccessTextBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="필터 및 진행률 보기..." 
                                               FontSize="{StaticResource FontSizeSmall}" 
                                               Foreground="{StaticResource TextMutedBrush}" 
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </StackPanel>
                                
                                <!-- 접기/펼치기 버튼 -->
                                <Button Grid.Column="1"
                                        Style="{StaticResource IconButton}"
                                        Width="28" Height="28"
                                        Margin="8,0,12,0"
                                        Click="FilterBarToggle_Click"
                                        ToolTip="필터 바 접기/펼치기">
                                    <materialDesign:PackIcon Width="16" Height="16">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Setter Property="Kind" Value="ChevronUp"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFilterBarExpanded}" Value="False">
                                                        <Setter Property="Kind" Value="ChevronDown"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- F-001: 고급 필터 패널 -->
                        <Border Grid.Row="2"
                                Background="{StaticResource BlueGray50Brush}"
                                Padding="16,12"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Visibility="{Binding IsAdvancedFilterVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 차주 상태 필터 -->
                                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                    <TextBlock Text="차주 상태" 
                                               FontWeight="SemiBold" 
                                               FontSize="{StaticResource FontSizeSmall}" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,0,6"/>
                                    <WrapPanel>
                                        <CheckBox Content="회생" 
                                                  IsChecked="{Binding FilterRestructuring}"
                                                  Margin="0,0,12,4"
                                                  FontSize="{StaticResource FontSizeBody}"/>
                                        <CheckBox Content="개회(면책)" 
                                                  IsChecked="{Binding FilterOpened}"
                                                  Margin="0,0,12,4"
                                                  FontSize="{StaticResource FontSizeBody}"/>
                                        <CheckBox Content="사망" 
                                                  IsChecked="{Binding FilterDeceased}"
                                                  Margin="0,0,12,4"
                                                  FontSize="{StaticResource FontSizeBody}"/>
                                        <CheckBox Content="차주거주" 
                                                  IsChecked="{Binding FilterBorrowerResiding}"
                                                  Margin="0,0,0,4"
                                                  FontSize="{StaticResource FontSizeBody}"/>
                                    </WrapPanel>
                                </StackPanel>

                                <!-- 담보 유형 필터 -->
                                <StackPanel Grid.Column="1" Margin="0,0,24,0">
                                    <TextBlock Text="담보 유형" 
                                               FontWeight="SemiBold" 
                                               FontSize="{StaticResource FontSizeSmall}" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding PropertyTypes}" 
                                              SelectedItem="{Binding SelectedPropertyType}"
                                              Width="120"
                                              Padding="8,6"
                                              FontSize="{StaticResource FontSizeBody}"/>
                                </StackPanel>

                                <!-- 선순위 필터 -->
                                <StackPanel Grid.Column="2" Margin="0,0,24,0">
                                    <TextBlock Text="소유자 전입" 
                                               FontWeight="SemiBold" 
                                               FontSize="{StaticResource FontSizeSmall}" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox Width="100"
                                              Padding="8,6"
                                              FontSize="{StaticResource FontSizeBody}"
                                              SelectionChanged="OwnerMoveInFilter_SelectionChanged"
                                              x:Name="OwnerMoveInComboBox">
                                        <ComboBoxItem Content="전체" Tag="" IsSelected="True"/>
                                        <ComboBoxItem Content="전입" Tag="True"/>
                                        <ComboBoxItem Content="미전입" Tag="False"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 필터 초기화 버튼 -->
                                <Button Grid.Column="4"
                                        Command="{Binding ResetAdvancedFiltersCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="12,6"
                                        VerticalAlignment="Bottom"
                                        ToolTip="모든 고급 필터 초기화">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FilterRemove" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBlock Text="초기화" VerticalAlignment="Center" FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- 탭별 컨텐츠 영역 (물건 목록 또는 상세 화면) -->
                        <Grid Grid.Row="3">
                            <!-- ========== 물건 목록 (서버 사이드 페이지네이션 + 무한 스크롤) ========== -->
                            <DataGrid x:Name="ProgressDataGrid"
                                      ItemsSource="{Binding DashboardProperties}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserSortColumns="True"
                                      SelectionMode="Single"
                                      SelectionChanged="ProgressDataGrid_SelectionChanged"
                                      ScrollViewer.ScrollChanged="ProgressDataGrid_ScrollChanged"
                                      GridLinesVisibility="All"
                                      HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                                      VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                                      HeadersVisibility="Column"
                                      Background="{StaticResource SurfaceBrush}"
                                      BorderThickness="0"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto"
                                      EnableRowVirtualization="True"
                                      EnableColumnVirtualization="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      Visibility="Visible">
                            
                            <DataGrid.Columns>
                                <!-- 차주번호 -->
                                <DataGridTextColumn Header="차주번호" 
                                                  Binding="{Binding BorrowerNumber}" 
                                                  Width="80"
                                                  IsReadOnly="True"/>
                                
                                <!-- 차주명 -->
                                <DataGridTextColumn Header="차주명" 
                                                  Binding="{Binding DebtorName}" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                                
                                <!-- Assign (PM만) -->
                                <DataGridTemplateColumn Header="Assign" 
                                                       Width="120"
                                                       Visibility="{Binding DataContext.IsPMView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding DataContext.Evaluators, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      DisplayMemberPath="Name"
                                                      SelectedValuePath="Id"
                                                      SelectedValue="{Binding AssignedTo, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectionChanged="AssignComboBox_SelectionChanged"
                                                      Padding="4"
                                                      BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- OPB (Outstanding Principal Balance) -->
                                <DataGridTemplateColumn Header="OPB" Width="100" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Opb, StringFormat=N0}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Padding="4,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 담보번호 -->
                                <DataGridTemplateColumn Header="담보번호" Width="100" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CollateralNumber}"
                                                       Padding="8,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       FontWeight="SemiBold"
                                                       Cursor="Hand"
                                                       MouseLeftButtonUp="PropertyNumber_Click"
                                                       ToolTip="클릭하여 상세 화면으로 이동"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 담보종류 -->
                                <DataGridTextColumn Header="담보종류" 
                                                  Binding="{Binding PropertyType}" 
                                                  Width="80"
                                                  IsReadOnly="True"/>
                                
                                <!-- 약정서 (체크박스) -->
                                <DataGridTemplateColumn Header="약정서" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding AgreementDoc, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="agreement_doc"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 보증서 (체크박스) -->
                                <DataGridTemplateColumn Header="보증서" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding GuaranteeDoc, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="guarantee_doc"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경매개시여부 1 -->
                                <DataGridTemplateColumn Header="경매개시" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox SelectedItem="{Binding AuctionStart1, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectionChanged="AuctionStartComboBox_SelectionChanged"
                                                      Tag="auction_start_1"
                                                      Padding="2"
                                                      BorderThickness="0">
                                                <ComboBoxItem Content=""/>
                                                <ComboBoxItem Content="개시"/>
                                                <ComboBoxItem Content="미개시"/>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경매열람자료 (체크박스) -->
                                <DataGridTemplateColumn Header="경매열람" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding AuctionDocs, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="auction_docs"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 전입/상가임대차 열람 (체크박스) -->
                                <DataGridTemplateColumn Header="전입열람" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding TenantDocs, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="tenant_docs"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 선순위검토 (체크박스) -->
                                <DataGridTemplateColumn Header="선순위" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding SeniorRightsReview, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="senior_rights_review"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 담보평가 -->
                                <DataGridTemplateColumn Header="담보평가" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding AppraisalValue, StringFormat=N0}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Padding="4,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경(공)매일정 (체크 표시) -->
                                <DataGridTemplateColumn Header="경(공)매일정" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding AuctionScheduleDate, Converter={StaticResource NullToBoolConverter}, Mode=OneWay}"
                                                      HorizontalAlignment="Center"
                                                      IsEnabled="False"
                                                      ToolTip="{Binding AuctionScheduleDate, StringFormat=yyyy-MM-dd}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- QA 상태 (N/A / 미완) -->
                                <DataGridTemplateColumn Header="QA" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4"
                                                    Padding="6,2"
                                                    HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding QaUnansweredCount, Converter={StaticResource IntToVisibilityConverter}}" Value="Visible">
                                                                <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="{StaticResource FontSizeSmall}" HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="N/A"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding QaUnansweredCount, Converter={StaticResource IntToVisibilityConverter}}" Value="Visible">
                                                                    <Setter Property="Text" Value="미완"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 권리분석 상태 (업로드 회차 표시) - 피드백 11번 -->
                                <DataGridTemplateColumn Header="권리분석" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4"
                                                    Padding="6,2"
                                                    HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                                        <Style.Triggers>
                                                            <!-- 1회 이상 업로드 시 녹색 배경 -->
                                                            <DataTrigger Binding="{Binding RightsAnalysisUploadCount, Converter={StaticResource IntToVisibilityConverter}}" Value="Visible">
                                                                <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <!-- 0인 경우 "-" 표시 -->
                                                    <TextBlock Text="-" 
                                                               FontSize="{StaticResource FontSizeSmall}"
                                                               Foreground="{StaticResource DeepNavy700Brush}"
                                                               Visibility="{Binding RightsAnalysisUploadCount, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=invert}"/>
                                                    <!-- 1 이상인 경우 "N차" 표시 -->
                                                    <TextBlock FontSize="{StaticResource FontSizeSmall}"
                                                               Foreground="White"
                                                               Visibility="{Binding RightsAnalysisUploadCount, Converter={StaticResource IntToVisibilityConverter}}">
                                                        <Run Text="{Binding RightsAnalysisUploadCount, Mode=OneWay}"/><Run Text="차"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 인터림 (체크박스) -->
                                <DataGridTemplateColumn Header="인터림" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding InterimCompleted, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="interim_completed"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경매사건번호 (뒤쪽 배치) -->
                                <DataGridTextColumn Header="경매사건번호" 
                                                  Binding="{Binding PropertyNumber}" 
                                                  Width="120"
                                                  IsReadOnly="True"/>
                                
                                <!-- 상세 보기 버튼 -->
                                <DataGridTemplateColumn Header="작업" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="상세" 
                                                   Command="{Binding DataContext.ViewPropertyDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{StaticResource PrimaryButton}"
                                                   Padding="8,2"
                                                   FontSize="{StaticResource FontSizeSmall}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="8,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BlueGray200Brush}"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BlueGray100Brush}"/>
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>

                            <!-- 상세 모드: 물건별 상세 View -->
                            <ContentControl x:Name="TabContentControl"
                                            Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
