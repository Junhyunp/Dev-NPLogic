<UserControl x:Class="NPLogic.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             Loaded="DashboardView_Loaded"
             Focusable="True"
             PreviewKeyDown="DashboardView_PreviewKeyDown">
    
    <UserControl.Resources>
        <!-- 영역 토글 버튼 스타일 -->
        <Style x:Key="PanelToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 프로그램 리스트 아이템 스타일 -->
        <Style x:Key="ProgramListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BlueGray200Brush}"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3,0,0,1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 내부 탭 버튼 스타일 - 피드백 반영: 크기 축소 -->
        <Style x:Key="InnerTabButton" TargetType="RadioButton">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd" 
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- 로딩 오버레이 -->
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="100">
            <Border Background="#80FFFFFF"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,16"/>
                <TextBlock Text="데이터 로드 중..." 
                           Style="{StaticResource BodyTextStyle}"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
            </StackPanel>
        </Grid>

        <!-- 에러 메시지 오버레이 -->
        <Grid Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
              Background="#80000000"
              Panel.ZIndex="100">
            <Border Background="{StaticResource ErrorBrush}"
                    CornerRadius="8"
                    Padding="24"
                    MaxWidth="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="White"
                               TextWrapping="Wrap"
                               FontSize="14"/>
                    <Button Content="닫기" 
                            Command="{Binding ClearErrorCommand}"
                            Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 메인 레이아웃 -->
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 헤더 영역 -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="대시보드" 
                                   Style="{StaticResource H2TextStyle}"
                                   Margin="0,0,16,0"/>
                        <!-- 역할 뱃지 -->
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Visibility="{Binding CurrentUser, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding RoleBadgeText}" 
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Style="{StaticResource BodyTextStyle}"
                               Opacity="0.7"
                               Margin="0,4,0,0">
                        <Run Text="담당자:"/>
                        <Run Text="{Binding CurrentUser.Name, FallbackValue='로그인 필요'}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <!-- 우측 버튼들 - 피드백 반영: 아이콘+ToolTip 추가 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding RefreshDataCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Padding="8,6"
                            Margin="0,0,8,0"
                            ToolTip="데이터를 서버에서 다시 불러옵니다 (Ctrl+R)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                     Width="14" Height="14" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="새로고침" VerticalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <!-- 롤업 버튼 (Phase 4.5) - 피드백 반영: 크기 축소 -->
                    <Button Style="{StaticResource SecondaryButton}"
                            Padding="8,6"
                            Margin="0,0,8,0"
                            Click="RollupButton_Click"
                            ToolTip="전체 현황 창 열기 (비핵심 전체 데이터 한눈에 보기)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TableLarge" 
                                                     Width="14" Height="14" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="롤업" VerticalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ExportToExcelCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="8,6"
                            ToolTip="현재 데이터를 Excel 파일로 내보내기">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="MicrosoftExcel" 
                                                     Width="14" Height="14" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="Excel" VerticalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 2영역 레이아웃 (Phase 2.2, 2.3, 2.4) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <!-- 좌측: 진행 중인 프로그램 (접을 수 있음) -->
                    <ColumnDefinition x:Name="LeftPanelColumn" Width="280" MinWidth="0"/>
                    <!-- GridSplitter -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 우측: 프로그램명 상세 -->
                    <ColumnDefinition Width="*" MinWidth="400"/>
                </Grid.ColumnDefinitions>

                <!-- ========== 좌측: 진행 중인 프로그램 ========== -->
                <Border x:Name="LeftPanel"
                        Grid.Column="0"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8,0,0,8"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,0,1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 좌측 패널 헤더 -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource BlueGray50Brush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="진행 중인 프로그램" 
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>

                                <!-- 좌측 패널 닫기/열기 토글 -->
                                <ToggleButton x:Name="LeftPanelToggle"
                                              Grid.Column="1"
                                              Style="{StaticResource PanelToggleButton}"
                                              IsChecked="True"
                                              Click="LeftPanelToggle_Click"
                                              ToolTip="패널 접기/펼치기">
                                    <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!-- 프로그램 목록 -->
                        <ListBox Grid.Row="1"
                                 x:Name="ProgramListBox"
                                 ItemsSource="{Binding ProgramSummaries}"
                                 SelectedItem="{Binding SelectedProgram}"
                                 SelectionChanged="ProgramListBox_SelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ItemContainerStyle="{StaticResource ProgramListItem}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- 프로그램명 -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding ProjectName}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>

                                        <!-- 물건 수 -->
                                        <TextBlock Grid.Row="1"
                                                   Margin="0,4,0,0"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="물건"/>
                                            <Run Text="{Binding TotalCount}" FontWeight="SemiBold"/>
                                            <Run Text="건"/>
                                            <Run Text=" | "/>
                                            <Run Text="완료"/>
                                            <Run Text="{Binding CompletedCount}" FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}"/>
                                            <Run Text="건"/>
                                        </TextBlock>

                                        <!-- 진행률 바 -->
                                        <Grid Grid.Row="2" Margin="0,6,0,0">
                                            <ProgressBar Value="{Binding ProgressPercent, Mode=OneWay}" 
                                                         Maximum="100"
                                                         Height="6"
                                                         Foreground="{StaticResource SuccessBrush}"
                                                         Background="{StaticResource BlueGray200Brush}"/>
                                            <TextBlock HorizontalAlignment="Right"
                                                       Margin="0,8,0,0"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="{Binding ProgressPercent, Mode=OneWay}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- ========== GridSplitter (Phase 2.3) ========== -->
                <GridSplitter Grid.Column="1"
                              Width="6"
                              Background="{StaticResource BlueGray100Brush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              ResizeBehavior="PreviousAndNext"
                              ShowsPreview="True"
                              Cursor="SizeWE">
                    <GridSplitter.Template>
                        <ControlTemplate TargetType="GridSplitter">
                            <Border Background="{StaticResource BlueGray200Brush}"
                                    Width="6"
                                    CornerRadius="3">
                                <Rectangle Width="2" Height="30" Fill="{StaticResource BlueGray300Brush}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           RadiusX="1" RadiusY="1"/>
                            </Border>
                        </ControlTemplate>
                    </GridSplitter.Template>
                </GridSplitter>

                <!-- ========== 우측: 프로그램명 상세 ========== -->
                <Border Grid.Column="2"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="0,8,8,0"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 우측 패널 헤더 -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource BlueGray50Brush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="16,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 좌측 패널 열기 버튼 (접혀있을 때만 표시) -->
                                <ToggleButton x:Name="LeftPanelOpenButton"
                                              Grid.Column="0"
                                              Style="{StaticResource PanelToggleButton}"
                                              Visibility="Collapsed"
                                              Click="LeftPanelOpen_Click"
                                              ToolTip="프로그램 목록 열기"
                                              Margin="0,0,12,0">
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                                </ToggleButton>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="{Binding SelectedProgram.ProjectName, FallbackValue='프로그램을 선택하세요'}" 
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Margin="12,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="13"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Visibility="{Binding SelectedProgram, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="("/>
                                        <Run Text="{Binding SelectedProgram.TotalCount}"/>
                                        <Run Text="건)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- 내부 탭 메뉴 (Phase 2.5 - 상단 메뉴를 여기로 이동) -->
                        <Border Grid.Row="1"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Background="{StaticResource SurfaceBrush}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Disabled">
                                <StackPanel Orientation="Horizontal" Margin="8,0">
                                    <RadioButton x:Name="TabHome" 
                                                 Content="홈" 
                                                 Style="{StaticResource InnerTabButton}"
                                                 GroupName="InnerTabs"
                                                 IsChecked="True"
                                                 Checked="InnerTab_Checked"/>
                                    <RadioButton x:Name="TabNonCore" 
                                                 Content="비핵심" 
                                                 Style="{StaticResource InnerTabButton}"
                                                 GroupName="InnerTabs"
                                                 Checked="InnerTab_Checked"/>
                                    <RadioButton x:Name="TabRegistry" 
                                                 Content="등기부" 
                                                 Style="{StaticResource InnerTabButton}"
                                                 GroupName="InnerTabs"
                                                 Checked="InnerTab_Checked"/>
                                    <RadioButton x:Name="TabRights" 
                                                 Content="권리분석" 
                                                 Style="{StaticResource InnerTabButton}"
                                                 GroupName="InnerTabs"
                                                 Checked="InnerTab_Checked"/>
                                    <RadioButton x:Name="TabBasicData" 
                                                 Content="기초데이터" 
                                                 Style="{StaticResource InnerTabButton}"
                                                 GroupName="InnerTabs"
                                                 Checked="InnerTab_Checked"/>
                                    <RadioButton x:Name="TabClosing" 
                                                 Content="마감" 
                                                 Style="{StaticResource InnerTabButton}"
                                                 GroupName="InnerTabs"
                                                 Checked="InnerTab_Checked"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- 컬럼별 진행률 표시 (Phase 2.6) -->
                        <Border Grid.Row="2"
                                Background="{StaticResource BlueGray50Brush}"
                                Padding="16,10"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Visibility="{Binding SelectedProgram, Converter={StaticResource NullToVisibilityConverter}}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Disabled">
                                <StackPanel Orientation="Horizontal">
                                    <!-- 진행률 항목들 -->
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="약정서" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.AgreementDocPercent, StringFormat={}{0}%}" 
                                                       FontSize="12" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="보증서" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.GuaranteeDocPercent, StringFormat={}{0}%}" 
                                                       FontSize="12" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="경매열람" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.AuctionDocsPercent, StringFormat={}{0}%}" 
                                                       FontSize="12" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="전입열람" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.TenantDocsPercent, StringFormat={}{0}%}" 
                                                       FontSize="12" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="선순위" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.SeniorRightsPercent, StringFormat={}{0}%}" 
                                                       FontSize="12" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,8,0"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="평가확정" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.AppraisalConfirmedPercent, StringFormat={}{0}%}" 
                                                       FontSize="12" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SuccessBgBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            BorderBrush="{StaticResource SuccessBrush}"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="전체 완료" FontSize="12" Foreground="{StaticResource SuccessTextBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ColumnProgress.OverallPercent, StringFormat={}{0}%}" 
                                                       FontSize="12" FontWeight="Bold" Margin="6,0,0,0"
                                                       Foreground="{StaticResource SuccessTextBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- 탭별 컨텐츠 영역 (Phase 6) -->
                        <Grid Grid.Row="3">
                            <!-- 홈 탭: 데이터 그리드 -->
                            <DataGrid x:Name="ProgressDataGrid"
                                      ItemsSource="{Binding DashboardProperties}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      SelectionMode="Single"
                                      GridLinesVisibility="All"
                                      HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                                      VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                                      HeadersVisibility="Column"
                                      Background="{StaticResource SurfaceBrush}"
                                      BorderThickness="0"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            
                            <DataGrid.Columns>
                                <!-- 차주번호 -->
                                <DataGridTemplateColumn Header="차주번호" Width="100" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding PropertyNumber}"
                                                       Padding="8,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       FontWeight="SemiBold"
                                                       Cursor="Hand"
                                                       MouseLeftButtonUp="PropertyNumber_Click"
                                                       ToolTip="클릭하여 비핵심 화면으로 이동"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 차주명 -->
                                <DataGridTextColumn Header="차주명" 
                                                  Binding="{Binding DebtorName}" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                                
                                <!-- Assign (PM만) -->
                                <DataGridTemplateColumn Header="Assign" 
                                                       Width="120"
                                                       Visibility="{Binding DataContext.IsPMView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding DataContext.Evaluators, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      DisplayMemberPath="Name"
                                                      SelectedValuePath="Id"
                                                      SelectedValue="{Binding AssignedTo, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectionChanged="AssignComboBox_SelectionChanged"
                                                      Padding="4"
                                                      BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 담보번호 -->
                                <DataGridTextColumn Header="담보번호" 
                                                  Binding="{Binding CollateralNumber}" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                                
                                <!-- 물건종류 -->
                                <DataGridTextColumn Header="물건종류" 
                                                  Binding="{Binding PropertyType}" 
                                                  Width="80"
                                                  IsReadOnly="True"/>
                                
                                <!-- 약정서 (체크박스) -->
                                <DataGridTemplateColumn Header="약정서" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding AgreementDoc, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="agreement_doc"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 보증서 (체크박스) -->
                                <DataGridTemplateColumn Header="보증서" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding GuaranteeDoc, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="guarantee_doc"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경개개시여부 1 -->
                                <DataGridTemplateColumn Header="경개1" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox SelectedItem="{Binding AuctionStart1, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectionChanged="AuctionStartComboBox_SelectionChanged"
                                                      Tag="auction_start_1"
                                                      Padding="2"
                                                      BorderThickness="0">
                                                <ComboBoxItem Content=""/>
                                                <ComboBoxItem Content="개시"/>
                                                <ComboBoxItem Content="미개시"/>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경개개시여부 2 -->
                                <DataGridTemplateColumn Header="경개2" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox SelectedItem="{Binding AuctionStart2, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectionChanged="AuctionStartComboBox_SelectionChanged"
                                                      Tag="auction_start_2"
                                                      Padding="2"
                                                      BorderThickness="0">
                                                <ComboBoxItem Content=""/>
                                                <ComboBoxItem Content="개시"/>
                                                <ComboBoxItem Content="미개시"/>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경매열람자료 (체크박스) -->
                                <DataGridTemplateColumn Header="경매열람" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding AuctionDocs, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="auction_docs"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 전입/상가임대차 열람 (체크박스) -->
                                <DataGridTemplateColumn Header="전입열람" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding TenantDocs, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="tenant_docs"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 선순위검토 (체크박스) -->
                                <DataGridTemplateColumn Header="선순위" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding SeniorRightsReview, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="senior_rights_review"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 평가액확정 (체크박스) -->
                                <DataGridTemplateColumn Header="평가확정" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding AppraisalConfirmed, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      Click="ProgressCheckBox_Click"
                                                      Tag="appraisal_confirmed"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 경(공)매일정 -->
                                <DataGridTemplateColumn Header="경매일정" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding AuctionScheduleDate, StringFormat=yyyy-MM-dd}"
                                                       VerticalAlignment="Center"
                                                       Padding="4,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- QA 미회신 (뱃지) -->
                                <DataGridTemplateColumn Header="QA" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource ErrorBrush}"
                                                    CornerRadius="10"
                                                    Padding="6,2"
                                                    HorizontalAlignment="Center"
                                                    Visibility="{Binding QaUnansweredCount, Converter={StaticResource IntToVisibilityConverter}}">
                                                <TextBlock Text="{Binding QaUnansweredCount}"
                                                           Foreground="White"
                                                           FontSize="11"
                                                           FontWeight="Bold"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 권리분석 상태 -->
                                <DataGridTemplateColumn Header="권리분석" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4"
                                                    Padding="6,2"
                                                    HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RightsAnalysisStatus}" Value="completed">
                                                                <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RightsAnalysisStatus}" Value="processing">
                                                                <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="대기"/>
                                                            <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RightsAnalysisStatus}" Value="completed">
                                                                    <Setter Property="Text" Value="완료"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RightsAnalysisStatus}" Value="processing">
                                                                    <Setter Property="Text" Value="진행중"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <!-- 상세 보기 버튼 -->
                                <DataGridTemplateColumn Header="작업" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="상세" 
                                                   Command="{Binding DataContext.ViewPropertyDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{StaticResource PrimaryButton}"
                                                   Padding="8,2"
                                                   FontSize="11"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="8,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BlueGray200Brush}"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BlueGray100Brush}"/>
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>

                            <!-- 비핵심/등기부/권리분석/기초데이터/마감 탭: 물건별 상세 View -->
                            <ContentControl x:Name="TabContentControl"
                                            Visibility="Collapsed"/>

                            <!-- 물건 선택 안내 메시지 -->
                            <Border x:Name="SelectPropertyMessage"
                                    Background="{StaticResource BlueGray50Brush}"
                                    Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" 
                                            HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CursorPointer" 
                                                             Width="64" Height="64"
                                                             Foreground="{StaticResource BlueGray300Brush}"
                                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="물건을 선택하세요" 
                                               Style="{StaticResource H3TextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,16,0,8"/>
                                    <TextBlock Text="위 목록에서 물건을 선택하거나 차주번호를 클릭하면&#10;해당 물건의 상세 정보를 볼 수 있습니다."
                                               Style="{StaticResource BodyTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextAlignment="Center"
                                               Opacity="0.7"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
