<UserControl x:Class="NPLogic.Views.Loan.Sections.GuaranteeTypeSummarySection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="TableBorderBrush" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#E7E7E7"/>
        <SolidColorBrush x:Key="GreenBg" Color="#92D050"/>
        <SolidColorBrush x:Key="LightGreenBg" Color="#C6EFCE"/>
        
        <Style x:Key="CellBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource TableBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        
        <Style x:Key="HeaderCell" TargetType="Border" BasedOn="{StaticResource CellBorder}">
            <Setter Property="Background" Value="{StaticResource HeaderBg}"/>
        </Style>
        
        <Style x:Key="DataCell" TargetType="Border" BasedOn="{StaticResource CellBorder}">
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="TotalCell" TargetType="Border" BasedOn="{StaticResource CellBorder}">
            <Setter Property="Background" Value="{StaticResource LightGreenBg}"/>
        </Style>
        
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource FontSizeTiny}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource FontSizeTiny}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="AmountText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource FontSizeTiny}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Border BorderBrush="{StaticResource TableBorderBrush}" BorderThickness="1,1,0,0">
        <StackPanel>
            <!-- 원본 엑셀과 동일하게 섹션 제목 없이 바로 테이블 표시 -->
            
            <!-- 헤더 행 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource HeaderCell}">
                    <TextBlock Text="보증여부(AK)" Style="{StaticResource HeaderText}"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource HeaderCell}">
                    <TextBlock Text="대출원금잔액&#x0a;(AL)" Style="{StaticResource HeaderText}"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource HeaderCell}">
                    <TextBlock Text="미수이자&#x0a;(AM)" Style="{StaticResource HeaderText}"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource HeaderCell}">
                    <TextBlock Text="1안 연체이자&#x0a;(AN)" Style="{StaticResource HeaderText}"/>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource HeaderCell}">
                    <TextBlock Text="2안 연체이자&#x0a;(AO)" Style="{StaticResource HeaderText}"/>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource HeaderCell}">
                    <TextBlock Text="1안 Loan Cap&#x0a;(LC11)" Style="{StaticResource HeaderText}"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource HeaderCell}">
                    <TextBlock Text="2안 Loan Cap&#x0a;(LC12)" Style="{StaticResource HeaderText}"/>
                </Border>
            </Grid>
            
            <!-- 비보증부 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource DataCell}">
                    <TextBlock Text="비보증부" Style="{StaticResource LabelText}"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NonGuaranteePrincipal, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NonGuaranteeInterest, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NonGuaranteeOverdue1, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NonGuaranteeOverdue2, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NonGuaranteeLC1, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NonGuaranteeLC2, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
            </Grid>
            
            <!-- 일반보증 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource DataCell}">
                    <TextBlock Text="일반보증" Style="{StaticResource LabelText}"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalGuaranteePrincipal, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalGuaranteeInterest, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalGuaranteeOverdue1, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalGuaranteeOverdue2, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalGuaranteeLC1, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalGuaranteeLC2, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
            </Grid>
            
            <!-- 해지부보증 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource DataCell}">
                    <TextBlock Text="해지부보증" Style="{StaticResource LabelText}"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedGuaranteePrincipal, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedGuaranteeInterest, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedGuaranteeOverdue1, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedGuaranteeOverdue2, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedGuaranteeLC1, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedGuaranteeLC2, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
            </Grid>
            
            <!-- 일반 유효보증 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource DataCell}">
                    <TextBlock Text="일반 유효보증" Style="{StaticResource LabelText}"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalValidGuaranteePrincipal, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalValidGuaranteeInterest, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalValidGuaranteeOverdue1, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalValidGuaranteeOverdue2, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalValidGuaranteeLC1, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.NormalValidGuaranteeLC2, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
            </Grid>
            
            <!-- 해지부 유효보증 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource DataCell}">
                    <TextBlock Text="해지부 유효보증" Style="{StaticResource LabelText}"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedValidGuaranteePrincipal, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedValidGuaranteeInterest, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedValidGuaranteeOverdue1, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedValidGuaranteeOverdue2, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedValidGuaranteeLC1, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedValidGuaranteeLC2, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
            </Grid>
            
            <!-- 해지부해지채권 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource DataCell}">
                    <TextBlock Text="해지부해지채권" Style="{StaticResource LabelText}"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedBondPrincipal, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedBondInterest, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedBondOverdue1, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource DataCell}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedBondOverdue2, StringFormat=N0}" Style="{StaticResource AmountText}"/>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedBondLC1, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource DataCell}" Background="{StaticResource LightGreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TerminatedBondLC2, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="SemiBold"/>
                </Border>
            </Grid>
            
            <!-- 합계 행 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource TotalCell}">
                    <TextBlock Text="합계" Style="{StaticResource LabelText}" FontWeight="Bold"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource TotalCell}"/>
                <Border Grid.Column="2" Style="{StaticResource TotalCell}"/>
                <Border Grid.Column="3" Style="{StaticResource TotalCell}"/>
                <Border Grid.Column="4" Style="{StaticResource TotalCell}"/>
                <Border Grid.Column="5" Style="{StaticResource TotalCell}" Background="{StaticResource GreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TotalLC1, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="Bold"/>
                </Border>
                <Border Grid.Column="6" Style="{StaticResource TotalCell}" Background="{StaticResource GreenBg}">
                    <TextBlock Text="{Binding GuaranteeTypeTotals.TotalLC2, StringFormat=N0}" Style="{StaticResource AmountText}" FontWeight="Bold"/>
                </Border>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
