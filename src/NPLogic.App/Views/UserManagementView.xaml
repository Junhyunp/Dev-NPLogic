<UserControl x:Class="NPLogic.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:UserManagementViewModel}"
             Loaded="UserManagementView_Loaded">
    
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="사용자 관리" 
                           Style="{StaticResource H2TextStyle}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="시스템 사용자 계정 및 권한 관리" 
                           Style="{StaticResource BodyTextStyle}"
                           Opacity="0.7"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="+ 사용자 추가" 
                        Command="{Binding AddUserCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,10"
                        Margin="0,0,12,0"/>
                <Button Content="새로고침" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10"/>
            </StackPanel>
        </Grid>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- 사용자 목록 (좌측) -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 필터/검색 영역 -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" 
                            BorderBrush="{StaticResource DividerBrush}" 
                            BorderThickness="0,0,0,1" 
                            Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <!-- 검색 -->
                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"
                                     materialDesign:HintAssist.Hint="이름 또는 이메일로 검색..."/>

                            <!-- 역할 필터 -->
                            <ComboBox Grid.Column="2" 
                                      ItemsSource="{Binding RoleFilters}"
                                      SelectedItem="{Binding SelectedRoleFilter}"
                                      Padding="12,10"/>

                            <!-- 상태 필터 -->
                            <ComboBox Grid.Column="4" 
                                      ItemsSource="{Binding StatusFilters}"
                                      SelectedItem="{Binding SelectedStatusFilter}"
                                      Padding="12,10"/>
                        </Grid>
                    </Border>

                    <!-- 사용자 목록 그리드 -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding FilteredUsers}" 
                              SelectedItem="{Binding SelectedUser}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              Background="Transparent"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                              HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                              VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="이메일" Binding="{Binding Email}" Width="200">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="역할" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource InfoBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="admin">
                                                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="pm">
                                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="evaluator">
                                                            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Foreground="White" FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="평가자"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="admin">
                                                                <Setter Property="Text" Value="관리자"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="pm">
                                                                <Setter Property="Text" Value="PM"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="evaluator">
                                                                <Setter Property="Text" Value="평가자"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="상태" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Margin="8,0,6,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="inactive">
                                                                <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="활성"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="inactive">
                                                                <Setter Property="Text" Value="비활성"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="생성일" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 페이지 정보 -->
                    <Border Grid.Row="2" 
                            Background="{StaticResource SurfaceColor}" 
                            BorderBrush="{StaticResource DividerBrush}" 
                            BorderThickness="0,1,0,0" 
                            Padding="16,12">
                        <TextBlock>
                            <Run Text="총 "/>
                            <Run Text="{Binding TotalUserCount, Mode=OneWay}" FontWeight="SemiBold"/>
                            <Run Text="명의 사용자"/>
                        </TextBlock>
                    </Border>
                </Grid>
            </Border>

            <!-- 사용자 상세/편집 패널 (우측) -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="24">
                <Grid>
                    <!-- 사용자 선택 안 됨 -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedUser}" Value="{x:Null}"/>
                                            <Condition Binding="{Binding IsAddingNew}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <materialDesign:PackIcon Kind="AccountCircle" 
                                               Width="64" Height="64" 
                                               Opacity="0.3"
                                               HorizontalAlignment="Center"/>
                        <TextBlock Text="사용자를 선택하세요" 
                                   Opacity="0.5" 
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="또는 '사용자 추가' 버튼을 클릭하세요" 
                                   Opacity="0.3"
                                   FontSize="12"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- 사용자 편집 폼 -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ScrollViewer.Style>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedUser}" Value="{x:Null}"/>
                                            <Condition Binding="{Binding IsAddingNew}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ScrollViewer.Style>

                    <StackPanel>
                        <!-- 헤더 -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" FontWeight="SemiBold" FontSize="18">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="사용자 정보 편집"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAddingNew}" Value="True">
                                                <Setter Property="Text" Value="새 사용자 추가"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Button Grid.Column="1" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource IconButton}"
                                    ToolTip="닫기"
                                    Visibility="{Binding IsAddingNew, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                            </Button>
                        </Grid>

                        <!-- 아바타 -->
                        <Border Width="80" Height="80" 
                                CornerRadius="40" 
                                Background="{StaticResource PrimaryBrush}"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,24">
                            <TextBlock Text="{Binding EditingUser.Name, Converter={StaticResource FirstCharConverter}}" 
                                       Foreground="White"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- 폼 필드들 -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="이름 *" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditingUser.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="이메일 *" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditingUser.Email, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,10"
                                     IsEnabled="{Binding IsAddingNew}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="역할 *" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding EditingUser.Role}"
                                      SelectedValuePath="Tag"
                                      Padding="12,10">
                                <ComboBoxItem Content="관리자" Tag="admin"/>
                                <ComboBoxItem Content="PM" Tag="pm"/>
                                <ComboBoxItem Content="평가자" Tag="evaluator"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="상태" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding EditingUser.Status}"
                                      SelectedValuePath="Tag"
                                      Padding="12,10">
                                <ComboBoxItem Content="활성" Tag="active"/>
                                <ComboBoxItem Content="비활성" Tag="inactive"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- 추가 정보 -->
                        <Separator Margin="0,8,0,16"/>
                        <TextBlock Text="추가 정보" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="소속 팀 (관리자용)" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditingUser.Team, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="직책/직급" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditingUser.Position, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="소속 회계법인 (PM/평가자용)" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditingUser.AccountingFirm, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,10"/>
                        </StackPanel>

                        <!-- 새 사용자 추가 시 비밀번호 -->
                        <StackPanel Margin="0,0,0,16" 
                                    Visibility="{Binding IsAddingNew, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="임시 비밀번호 *" FontSize="12" Opacity="0.6" Margin="0,0,0,4"/>
                            <PasswordBox x:Name="PasswordBox" Padding="12,10"/>
                            <TextBlock Text="최초 로그인 시 비밀번호 변경 권장" 
                                       FontSize="11" Opacity="0.5" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- 정보 표시 (기존 사용자) -->
                        <StackPanel Visibility="{Binding IsAddingNew, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <Separator Margin="0,8,0,16"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="생성일" FontSize="11" Opacity="0.5"/>
                                    <TextBlock Text="{Binding EditingUser.CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" 
                                               FontSize="13" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="수정일" FontSize="11" Opacity="0.5"/>
                                    <TextBlock Text="{Binding EditingUser.UpdatedAt, StringFormat=yyyy-MM-dd HH:mm}" 
                                               FontSize="13" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- 버튼들 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                            <!-- 삭제 버튼 (기존 사용자만) -->
                            <Button Content="삭제" 
                                    Command="{Binding DeleteUserCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Foreground="{StaticResource ErrorBrush}"
                                    Padding="20,10" 
                                    Margin="0,0,8,0"
                                    Visibility="{Binding IsAddingNew, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            
                            <!-- 취소 버튼 -->
                            <Button Content="취소" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="20,10" 
                                    Margin="0,0,8,0"/>
                            
                            <!-- 저장 버튼 -->
                            <Button Command="{Binding SaveUserCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="32,10">
                                <Button.Content>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="저장"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAddingNew}" Value="True">
                                                        <Setter Property="Text" Value="추가"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Border Grid.RowSpan="2" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="로딩 중..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- 에러 메시지 -->
        <Border Grid.Row="1" 
                Background="{StaticResource ErrorBrush}" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,0,0,16"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AlertCircle" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

