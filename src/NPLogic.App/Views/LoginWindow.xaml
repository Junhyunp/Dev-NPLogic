<Window x:Class="NPLogic.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:NPLogic.ViewModels"
        mc:Ignorable="d"
        Title="NPLogic - 로그인"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinWidth="1000"
        MinHeight="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 브랜딩 영역 -->
        <Border Grid.Column="0" 
                Background="{DynamicResource PrimaryBrush}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="40">
                
                <!-- 로고 (풀네임 버전) -->
                <Image Source="/Assets/img/black_full_logo.png"
                       MaxHeight="400"
                       MaxWidth="500"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30">
                    <!-- 어두운 배경에서 보이도록 색상 반전 효과 -->
                    <Image.Effect>
                        <DropShadowEffect Color="White" 
                                         BlurRadius="0" 
                                         ShadowDepth="0" 
                                         Opacity="1"/>
                    </Image.Effect>
                    <Image.OpacityMask>
                        <SolidColorBrush Color="White"/>
                    </Image.OpacityMask>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Style>
                    </Image.Style>
                </Image>
                
                <!-- 설명 -->
                <TextBlock Text="등기부등본 자동화 시스템"
                          FontSize="18"
                          Foreground="White"
                          Opacity="0.8"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Margin="0,0,0,40"/>

                <!-- 기능 설명 -->
                <StackPanel Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <materialDesign:PackIcon Kind="CheckCircle"
                                                Foreground="White"
                                                Width="24"
                                                Height="24"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="자동 OCR 처리"
                                  Foreground="White"
                                  FontSize="16"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <materialDesign:PackIcon Kind="CheckCircle"
                                                Foreground="White"
                                                Width="24"
                                                Height="24"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="권리 분석 자동화"
                                  Foreground="White"
                                  FontSize="16"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <materialDesign:PackIcon Kind="CheckCircle"
                                                Foreground="White"
                                                Width="24"
                                                Height="24"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Excel 일괄 처리"
                                  Foreground="White"
                                  FontSize="16"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 오른쪽: 로그인 폼 -->
        <Border Grid.Column="1"
                Background="White"
                Padding="60,40,60,40">
            
            <StackPanel VerticalAlignment="Top"
                        Margin="0,20,0,0">
                
                <!-- 제목 -->
                <TextBlock Text="로그인"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="{DynamicResource PrimaryBrush}"
                          Margin="0,0,0,8"/>
                
                <TextBlock Text="서비스를 이용하려면 로그인하세요"
                          FontSize="14"
                          Foreground="#666"
                          Margin="0,0,0,25"/>

                <!-- 에러 메시지 -->
                <Border Background="#FFEBEE"
                        BorderBrush="#EF5350"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,20"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlertCircle"
                                                Foreground="#EF5350"
                                                Width="20"
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorMessage}"
                                  Foreground="#C62828"
                                  FontSize="14"
                                  Margin="10,0,0,0"
                                  VerticalAlignment="Center"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- 이메일 입력 -->
                <TextBox materialDesign:HintAssist.Hint="이메일"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,15"
                         FontSize="16"
                         Height="60"
                         Padding="12,8"
                         VerticalContentAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SignInWithEmailCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- 비밀번호 입력 -->
                <PasswordBox x:Name="PasswordBox"
                            materialDesign:HintAssist.Hint="비밀번호"
                            Margin="0,0,0,15"
                            FontSize="16"
                            Height="60"
                            Padding="12,8"
                            VerticalContentAlignment="Center"
                            PasswordChanged="PasswordBox_PasswordChanged">
                    <PasswordBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SignInWithEmailCommand}"/>
                    </PasswordBox.InputBindings>
                </PasswordBox>

                <!-- 자동 로그인 -->
                <CheckBox Content="자동 로그인"
                         IsChecked="{Binding RememberMe}"
                         Margin="0,0,0,20"/>

                <!-- 로그인 버튼 -->
                <Button Command="{Binding SignInWithEmailCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Height="50"
                        Margin="0,0,0,15"
                        Style="{StaticResource PrimaryButton}">
                    <TextBlock Text="로그인"
                              FontSize="16"
                              FontWeight="SemiBold"/>
                </Button>

                <!-- 회원가입 버튼 -->
                <Button Command="{Binding SignUpCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Height="50"
                        Margin="0,0,0,15"
                        Style="{StaticResource SecondaryButton}">
                    <TextBlock Text="회원가입"
                              FontSize="16"
                              FontWeight="SemiBold"/>
                </Button>

                <!-- 로딩 표시 -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Value="0"
                                IsIndeterminate="True"
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"/>
                    <TextBlock Text="로그인 중..."
                              FontSize="14"
                              Foreground="#666"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 구분선 -->
                <Separator Margin="0,30,0,20"/>

                <!-- 테스트 로그인 (개발용) - 현재 비활성화 -->
                <!--
                <Button Command="{Binding TestLoginCommand}"
                        Content="테스트 로그인 (개발용)"
                        Height="40"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="#666"/>
                -->

                <!-- 푸터 -->
                <TextBlock Text="© 2025 NPLogic. All rights reserved."
                          FontSize="12"
                          Foreground="#999"
                          HorizontalAlignment="Center"
                          Margin="0,40,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

