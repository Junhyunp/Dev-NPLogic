<UserControl x:Class="NPLogic.Views.QASummaryTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:QASummaryViewModel}"
             Loaded="QASummaryTab_Loaded">
    
    <UserControl.Resources>
        <!-- 차주 리스트 아이템 스타일 -->
        <Style x:Key="BorrowerListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BlueGray200Brush}"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3,0,0,1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 필터 버튼 스타일 -->
        <Style x:Key="FilterButton" TargetType="RadioButton">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd" 
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4,4,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <!-- 로딩 오버레이 -->
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="100">
            <Border Background="{StaticResource OverlaySemiLightBrush}"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,16"/>
                <TextBlock Text="데이터 로드 중..." 
                           Style="{StaticResource BodyTextStyle}"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
            </StackPanel>
        </Grid>

        <!-- 에러 메시지 -->
        <Border Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                Background="{StaticResource ErrorBrush}"
                Padding="12,8"
                CornerRadius="4"
                Margin="16,8"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Panel.ZIndex="99">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AlertCircle" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="White" VerticalAlignment="Center"/>
                <Button Content="✕" 
                        Command="{Binding ClearErrorCommand}"
                        Style="{StaticResource IconButton}"
                        Foreground="White"
                        Margin="12,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- 메인 레이아웃 -->
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <!-- 좌측: 차주 목록 -->
                <ColumnDefinition Width="280"/>
                <!-- 우측: QA 목록 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== 좌측: 차주 목록 ========== -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8,0,0,8"
                    BorderBrush="{StaticResource PrimaryBrush}"
                    BorderThickness="2,2,0,2"
                    Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource HeaderNavyBrush}"
                            Padding="16,12">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" 
                                                         Width="20" Height="20" 
                                                         Foreground="White"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="차주 목록" 
                                           FontWeight="SemiBold"
                                           FontSize="{StaticResource FontSizeH4}"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Style="{StaticResource IconButton}"
                                    Command="{Binding RefreshCommand}"
                                    HorizontalAlignment="Right"
                                    ToolTip="새로고침">
                                <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 통계 -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource BlueGray50Brush}"
                            Padding="12,8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalQaCount}" 
                                           FontSize="{StaticResource FontSizeH2}" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="전체" FontSize="{StaticResource FontSizeSmall}" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding UnansweredCount}" 
                                           FontSize="{StaticResource FontSizeH2}" FontWeight="Bold"
                                           Foreground="{StaticResource ErrorBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="미답변" FontSize="{StaticResource FontSizeSmall}" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding AnsweredCount}" 
                                           FontSize="{StaticResource FontSizeH2}" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="답변완료" FontSize="{StaticResource FontSizeSmall}" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 차주 리스트 -->
                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding BorrowerSummaries}"
                             SelectedItem="{Binding SelectedBorrower}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ItemContainerStyle="{StaticResource BorrowerListItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 차주번호 + 차주명 -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding BorrowerNumber}"
                                                   FontWeight="SemiBold"
                                                   FontSize="{StaticResource FontSizeBody}"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text=" - "
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding BorrowerName}"
                                                   FontSize="{StaticResource FontSizeBody}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="150"/>
                                    </StackPanel>

                                    <!-- QA 건수 -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="QA " FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding TotalCount}" FontSize="{StaticResource FontSizeBody}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="건" FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text=" | " FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="미답변 " FontSize="{StaticResource FontSizeBody}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding UnansweredCount}" FontSize="{StaticResource FontSizeBody}" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding UnansweredCount, Converter={StaticResource IntToBoolConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- 진행률 바 -->
                                    <Grid Grid.Row="2" Margin="0,6,0,0">
                                        <ProgressBar Value="{Binding AnswerRate, Mode=OneWay}" 
                                                     Maximum="100"
                                                     Height="4"
                                                     Foreground="{StaticResource SuccessBrush}"
                                                     Background="{StaticResource BlueGray200Brush}"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- 전체 보기 버튼 -->
                    <Border Grid.Row="3" 
                            Background="{StaticResource BlueGray50Brush}"
                            Padding="8">
                        <Button Content="전체 QA 보기"
                                Command="{Binding LoadAllQaCommand}"
                                Style="{StaticResource SecondaryButton}"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>

            <!-- ========== 우측: QA 목록 ========== -->
            <Border Grid.Column="1"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="0,8,8,0"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,1,1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource BlueGray50Brush}"
                            Padding="16,12"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 제목 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ForumOutline" 
                                                         Width="20" Height="20" 
                                                         Foreground="{StaticResource PrimaryBrush}"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="QA 집계" 
                                           FontWeight="SemiBold"
                                           FontSize="{StaticResource FontSizeH3}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedBorrower.BorrowerNumber, StringFormat=' - {0}'}"
                                           FontSize="{StaticResource FontSizeH4}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding SelectedBorrower, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </StackPanel>

                            <!-- 버튼들 -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="답변 엑셀 업로드"
                                        Command="{Binding UploadAnswerExcelCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="12,6"
                                        Margin="0,0,8,0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Upload" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                <TextBlock Text="답변 업로드"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                                <Button Content="Excel 내보내기"
                                        Command="{Binding ExportToExcelCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Padding="12,6">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="MicrosoftExcel" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                <TextBlock Text="내보내기"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 필터 및 검색 -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource SurfaceBrush}"
                            Padding="16,8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 상태 필터 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <RadioButton Content="전체" 
                                             Style="{StaticResource FilterButton}"
                                             GroupName="QaFilter"
                                             IsChecked="True"
                                             Command="{Binding SetFilterCommand}"
                                             CommandParameter="all"/>
                                <RadioButton Content="미답변" 
                                             Style="{StaticResource FilterButton}"
                                             GroupName="QaFilter"
                                             Command="{Binding SetFilterCommand}"
                                             CommandParameter="unanswered"/>
                                <RadioButton Content="답변완료" 
                                             Style="{StaticResource FilterButton}"
                                             GroupName="QaFilter"
                                             Command="{Binding SetFilterCommand}"
                                             CommandParameter="answered"/>
                            </StackPanel>

                            <!-- 검색 -->
                            <Border Grid.Column="2" 
                                    Background="{StaticResource BlueGray50Brush}"
                                    CornerRadius="4"
                                    Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Search" 
                                                             Width="18" Height="18" 
                                                             Foreground="{StaticResource TextSecondaryBrush}"
                                                             VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                             Width="200"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             VerticalAlignment="Center"
                                             Margin="8,0,0,0"
                                             materialDesign:HintAssist.Hint="질문/답변 검색..."/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- QA 목록 (DataGrid) -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding QaList}"
                              SelectedItem="{Binding SelectedQa}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                              HeadersVisibility="Column"
                              Background="{StaticResource SurfaceBrush}"
                              BorderThickness="0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                        
                        <DataGrid.Columns>
                            <!-- 차주번호 -->
                            <DataGridTextColumn Header="차주번호" 
                                                Binding="{Binding BorrowerNumber}" 
                                                Width="80"
                                                IsReadOnly="True"/>
                            
                            <!-- 파트 -->
                            <DataGridTextColumn Header="파트" 
                                                Binding="{Binding Part}" 
                                                Width="80"
                                                IsReadOnly="True"/>
                            
                            <!-- 질문 -->
                            <DataGridTextColumn Header="질문" 
                                                Binding="{Binding Question}" 
                                                Width="*"
                                                MinWidth="200"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Padding" Value="4"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <!-- 답변 -->
                            <DataGridTextColumn Header="답변" 
                                                Binding="{Binding Answer}" 
                                                Width="*"
                                                MinWidth="200"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Padding" Value="4"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <!-- 상태 -->
                            <DataGridTemplateColumn Header="상태" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4"
                                                Padding="6,2"
                                                HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource ErrorBgBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAnswered}" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource SuccessBgBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="{StaticResource FontSizeSmall}" HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="미답변"/>
                                                        <Setter Property="Foreground" Value="{StaticResource ErrorTextBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAnswered}" Value="True">
                                                                <Setter Property="Text" Value="완료"/>
                                                                <Setter Property="Foreground" Value="{StaticResource SuccessTextBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- 생성일 -->
                            <DataGridTextColumn Header="생성일" 
                                                Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" 
                                                Width="90"
                                                IsReadOnly="True"/>
                            
                            <!-- 답변일 -->
                            <DataGridTextColumn Header="답변일" 
                                                Binding="{Binding AnsweredAt, StringFormat=yyyy-MM-dd}" 
                                                Width="90"
                                                IsReadOnly="True"/>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="MinHeight" Value="40"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
                                <Setter Property="Padding" Value="8,10"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BlueGray200Brush}"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>

                    <!-- 하단 버튼 영역 -->
                    <Border Grid.Row="3" 
                            Background="{StaticResource BlueGray50Brush}"
                            Padding="16,10"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 왼쪽: 선택된 항목 정보 -->
                            <TextBlock Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="{StaticResource FontSizeBody}">
                                <Run Text="총 "/>
                                <Run Text="{Binding QaList.Count, Mode=OneWay}" FontWeight="SemiBold"/>
                                <Run Text="건"/>
                            </TextBlock>

                            <!-- 오른쪽: 버튼들 -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="추가"
                                        Command="{Binding AddQaCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Padding="16,6"
                                        Margin="0,0,8,0"/>
                                <Button Content="수정"
                                        Command="{Binding EditQaCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="16,6"
                                        Margin="0,0,8,0"
                                        IsEnabled="{Binding SelectedQa, Converter={StaticResource NotNullToBoolConverter}}"/>
                                <Button Content="삭제"
                                        Command="{Binding DeleteQaCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="16,6"
                                        IsEnabled="{Binding SelectedQa, Converter={StaticResource NotNullToBoolConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- ========== 편집 팝업 ========== -->
        <Grid Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="200">
            <Border Background="{StaticResource OverlayBrush}" 
                    MouseLeftButtonDown="Overlay_MouseDown"/>
            
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Width="600"
                    MaxHeight="500"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="24">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 제목 -->
                    <TextBlock Grid.Row="0" 
                               Text="{Binding SelectedQa, Converter={StaticResource NullToTextConverter}, ConverterParameter='QA 수정|새 QA 추가'}"
                               FontSize="{StaticResource FontSizeH2}"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <!-- 파트 선택 -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="파트 (카테고리)" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding PartOptions}"
                                  SelectedItem="{Binding EditPart}"
                                  Padding="10,8"/>
                    </StackPanel>

                    <!-- 질문 입력 -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                        <TextBlock Text="질문 *" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,6"/>
                        <TextBox Text="{Binding EditQuestion, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="80"
                                 Padding="10,8"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- 답변 입력 -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,24">
                        <TextBlock Text="답변" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,6"/>
                        <TextBox Text="{Binding EditAnswer, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="80"
                                 Padding="10,8"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- 버튼 -->
                    <StackPanel Grid.Row="4" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="취소"
                                Command="{Binding CancelEditCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="24,8"
                                Margin="0,0,12,0"/>
                        <Button Content="저장"
                                Command="{Binding SaveQaCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Padding="24,8"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
