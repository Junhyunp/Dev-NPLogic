<UserControl x:Class="NPLogic.Views.AuctionScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:AuctionScheduleViewModel}"
             Loaded="AuctionScheduleView_Loaded">
    
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="경매 일정" 
                           Style="{StaticResource H2TextStyle}"
                           Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource BodyTextStyle}" Opacity="0.7">
                        <Run Text="총"/>
                        <Run Text="{Binding TotalCount, FallbackValue=0}"/>
                        <Run Text="건"/>
                    </TextBlock>
                    <TextBlock Text=" | " Opacity="0.5"/>
                    <TextBlock Style="{StaticResource BodyTextStyle}" Foreground="#2196F3">
                        <Run Text="예정"/>
                        <Run Text="{Binding ScheduledCount, FallbackValue=0}"/>
                        <Run Text="건"/>
                    </TextBlock>
                    <TextBlock Text=" | " Opacity="0.5"/>
                    <TextBlock Style="{StaticResource BodyTextStyle}" Foreground="#4CAF50">
                        <Run Text="완료"/>
                        <Run Text="{Binding CompletedCount, FallbackValue=0}"/>
                        <Run Text="건"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="이번 주" 
                        Command="{Binding ShowThisWeekCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="12,8"
                        Margin="0,0,8,0"/>
                <Button Content="이번 달" 
                        Command="{Binding ShowThisMonthCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="12,8"
                        Margin="0,0,8,0"/>
                <Button Content="+ 새 일정 추가" 
                        Command="{Binding NewScheduleCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="16,10"
                        Margin="0,0,8,0"/>
                <Button Content="새로고침" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,10"/>
            </StackPanel>
        </Grid>

        <!-- 필터 영역 -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 물건 선택 -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="물건" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Properties}" 
                              SelectedItem="{Binding SelectedProperty}"
                              DisplayMemberPath="AddressFull"
                              Width="250" Padding="10,8"/>
                </StackPanel>

                <!-- 상태 -->
                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <TextBlock Text="상태" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Statuses}" 
                              SelectedItem="{Binding SelectedStatus}"
                              Width="120" Padding="10,8"/>
                </StackPanel>

                <!-- 시작일 -->
                <StackPanel Grid.Column="2" Margin="0,0,16,0">
                    <TextBlock Text="시작일" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="130"/>
                </StackPanel>

                <!-- 종료일 -->
                <StackPanel Grid.Column="3" Margin="0,0,16,0">
                    <TextBlock Text="종료일" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="130"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 일정 목록 -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16">
                <DataGrid ItemsSource="{Binding Schedules}" 
                          SelectedItem="{Binding SelectedSchedule}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Background="Transparent"
                          CanUserAddRows="False"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                          VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                          SelectionMode="Single"
                          RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="경매일" Binding="{Binding AuctionDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                        <DataGridTemplateColumn Header="상태" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="scheduled">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="completed">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="cancelled">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusDisplay}" FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#1976D2"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="completed">
                                                            <Setter Property="Foreground" Value="#388E3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="cancelled">
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="사건번호" Binding="{Binding AuctionNumber}" Width="120"/>
                        <DataGridTextColumn Header="물건 주소" Binding="{Binding Property.AddressFull}" Width="*"/>
                        <DataGridTextColumn Header="최저매각가" Binding="{Binding MinimumBid, StringFormat=N0}" Width="120"/>
                        <DataGridTextColumn Header="낙찰가" Binding="{Binding SalePrice, StringFormat=N0}" Width="120"/>
                        <DataGridTextColumn Header="낙찰률" Binding="{Binding BidRate, StringFormat={}{0:F1}%}" Width="80"/>
                        <DataGridTextColumn Header="입찰일" Binding="{Binding BidDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- 편집 패널 -->
            <Border Grid.Column="1" 
                    Background="{StaticResource SurfaceColor}" 
                    CornerRadius="8" 
                    Padding="20"
                    Width="380"
                    Margin="16,0,0,0"
                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 헤더 -->
                        <Grid Margin="0,0,0,20">
                            <TextBlock FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="일정 수정"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsNewRecord}" Value="True">
                                                <Setter Property="Text" Value="새 일정 추가"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button Content="✕" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    HorizontalAlignment="Right"
                                    Padding="8,4"/>
                        </Grid>

                        <!-- 물건 선택 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="물건 선택" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding Properties}" 
                                      SelectedValue="{Binding EditPropertyId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="AddressFull"
                                      Padding="10,8"/>
                        </StackPanel>

                        <!-- 사건번호 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="사건번호" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditAuctionNumber, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="10,8"/>
                        </StackPanel>

                        <!-- 경매일 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="경매일 *" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                            <DatePicker SelectedDate="{Binding EditAuctionDate}"/>
                        </StackPanel>

                        <!-- 입찰일 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="입찰일" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                            <DatePicker SelectedDate="{Binding EditBidDate}"/>
                        </StackPanel>

                        <!-- 최저매각가 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="최저매각가" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditMinimumBid, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" 
                                     Padding="10,8"/>
                        </StackPanel>

                        <!-- 낙찰가 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="낙찰가" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditSalePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" 
                                     Padding="10,8"/>
                        </StackPanel>

                        <!-- 상태 -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="상태" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding EditStatus}" Padding="10,8">
                                <ComboBoxItem Content="예정 (scheduled)" Tag="scheduled"/>
                                <ComboBoxItem Content="완료 (completed)" Tag="completed"/>
                                <ComboBoxItem Content="취소 (cancelled)" Tag="cancelled"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- 버튼 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="삭제" 
                                    Command="{Binding DeleteCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="16,10"
                                    Margin="0,0,8,0"
                                    Visibility="{Binding IsNewRecord, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            <Button Content="취소" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="16,10"
                                    Margin="0,0,8,0"/>
                            <Button Content="저장" 
                                    Command="{Binding SaveCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="24,10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Border Grid.RowSpan="3" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="로딩 중..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- 에러 메시지 -->
        <Border Grid.Row="1" 
                Background="#FFEBEE" 
                CornerRadius="8" 
                Padding="16" 
                VerticalAlignment="Top"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828"/>
        </Border>
    </Grid>
</UserControl>

