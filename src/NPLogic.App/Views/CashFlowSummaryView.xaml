<UserControl x:Class="NPLogic.Views.CashFlowSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:CashFlowSummaryViewModel}"
             Loaded="CashFlowSummaryView_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="현금흐름 집계" 
                               Style="{StaticResource H2TextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBlock Style="{StaticResource BodyTextStyle}" Opacity="0.7">
                        <Run Text="액션데이트 기준 120개월(10년) 월별 현금흐름"/>
                        <Run Text=" | "/>
                        <Run Text="기준일:"/>
                        <Run Text="{Binding ActionDate, StringFormat=yyyy-MM-dd}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- 액션데이트 설정 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                        <TextBlock Text="액션데이트:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding ActionDate}" Width="120"/>
                    </StackPanel>
                    
                    <Button Content="Excel 내보내기" 
                            Command="{Binding ExportToExcelCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Padding="16,8"
                            Margin="0,0,8,0"/>
                    <Button Content="새로고침" 
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 요약 카드 영역 -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundColor}" Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 선택된 차주 수 -->
                <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="선택 차주" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                        <TextBlock FontSize="{StaticResource FontSizeH1}" FontWeight="Bold" Margin="0,4,0,0">
                            <Run Text="{Binding SelectedBorrowersCount, FallbackValue=0}"/>
                            <Run Text=" / " FontSize="{StaticResource FontSizeH4}" FontWeight="Normal"/>
                            <Run Text="{Binding TotalBorrowersCount, FallbackValue=0}" FontSize="{StaticResource FontSizeH4}" FontWeight="Normal"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 총 XNPV -->
                <Border Grid.Column="1" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="총 XNPV" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                        <TextBlock Text="{Binding TotalXnpv, StringFormat=N0, FallbackValue=-}" 
                                   FontSize="{StaticResource FontSizeH1}" FontWeight="Bold" Margin="0,4,0,0" Foreground="{StaticResource MaterialGreenBrush}"/>
                    </StackPanel>
                </Border>

                <!-- 총 유입 -->
                <Border Grid.Column="2" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="총 유입" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                        <TextBlock Text="{Binding TotalInflow, StringFormat=N0, FallbackValue=-}" 
                                   FontSize="{StaticResource FontSizeH1}" FontWeight="Bold" Margin="0,4,0,0" Foreground="{StaticResource MaterialBlueBrush}"/>
                    </StackPanel>
                </Border>

                <!-- 총 유출 -->
                <Border Grid.Column="3" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="총 유출" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                        <TextBlock Text="{Binding TotalOutflow, StringFormat=N0, FallbackValue=-}" 
                                   FontSize="{StaticResource FontSizeH1}" FontWeight="Bold" Margin="0,4,0,0" Foreground="{StaticResource MaterialRedBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 메인 영역: 좌측 차주 리스트 + 우측 월별 테이블 -->
        <Grid Grid.Row="2" Margin="24,12,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- S-007: 좌측 차주 리스트 + 검색 -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <Border Grid.Row="0" Background="{StaticResource BlueGray50Brush}" Padding="12,10">
                        <TextBlock Text="차주 리스트" FontWeight="SemiBold" FontSize="{StaticResource FontSizeH4}"/>
                    </Border>

                    <!-- 검색 -->
                    <Border Grid.Row="1" Padding="12,8">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8,6"
                                 FontSize="{StaticResource FontSizeBody}"
                                 materialDesign:HintAssist.Hint="차주명/번호 검색...">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- 전체 선택 -->
                    <Border Grid.Row="2" Padding="12,4" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <CheckBox Content="전체 선택" 
                                  IsChecked="{Binding IsAllSelected}"
                                  FontSize="{StaticResource FontSizeBody}"
                                  FontWeight="SemiBold"/>
                    </Border>

                    <!-- 차주 목록 -->
                    <ListView Grid.Row="3" 
                              ItemsSource="{Binding FilteredBorrowers}"
                              BorderThickness="0"
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" 
                                                  IsChecked="{Binding IsSelected}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding BorrowerName}" 
                                                       FontSize="{StaticResource FontSizeBody}" 
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding BorrowerNumber}" 
                                                       FontSize="{StaticResource FontSizeSmall}" 
                                                       Opacity="0.6"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- 구분선 -->
            <GridSplitter Grid.Column="1" Width="8" Background="Transparent" 
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- S-008: 우측 120개월 월별 현금흐름 테이블 -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceColor}" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <Border Grid.Row="0" Background="{StaticResource BlueGray50Brush}" Padding="12,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" FontWeight="SemiBold" FontSize="{StaticResource FontSizeH4}">
                                <Run Text="월별 현금흐름"/>
                                <Run Text=" (120개월)" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Normal"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Column="1" FontSize="{StaticResource FontSizeBody}" Opacity="0.7">
                                <Run Text="단위: 원"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- 월별 현금흐름 DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding MonthlyCashFlowRows}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                              HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                              VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                              BorderThickness="0"
                              Background="Transparent"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              FrozenColumnCount="1">
                        
                        <!-- 차주명 컬럼 (고정) -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="차주" 
                                                Binding="{Binding BorrowerName}" 
                                                Width="120"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Border Grid.RowSpan="3" Background="{StaticResource OverlayBrush}"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Value="{Binding LoadingProgress}" Maximum="{Binding LoadingTotal}" Width="200" Height="8"/>
                <TextBlock Text="{Binding LoadingMessage}" Foreground="White" Margin="0,16,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
