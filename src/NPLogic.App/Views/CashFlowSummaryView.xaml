<UserControl x:Class="NPLogic.Views.CashFlowSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:CashFlowSummaryViewModel}"
             Loaded="CashFlowSummaryView_Loaded">
    
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="현금흐름 집계" 
                           Style="{StaticResource H2TextStyle}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="XNPV 및 IRR 계산, 현금흐름 시뮬레이션" 
                           Style="{StaticResource BodyTextStyle}"
                           Opacity="0.7"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Excel 내보내기" 
                        Command="{Binding ExportToExcelCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10"
                        Margin="0,0,8,0"/>
                <Button Content="새로고침" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,10"/>
            </StackPanel>
        </Grid>

        <!-- 파라미터 및 결과 요약 -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 파라미터 설정 -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="계산 파라미터" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,16"/>
                    
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="차주 선택" FontSize="12" Opacity="0.7" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Borrowers}" 
                                  SelectedItem="{Binding SelectedBorrower}"
                                  DisplayMemberPath="BorrowerName"
                                  Padding="12,10"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="할인율 (%)" FontSize="12" Opacity="0.7" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding DiscountRate, StringFormat=P0, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="시나리오" FontSize="12" Opacity="0.7" Margin="0,0,0,4"/>
                            <ComboBox SelectedItem="{Binding SelectedScenario}" Padding="12,10">
                                <ComboBoxItem Content="1안" Tag="1"/>
                                <ComboBoxItem Content="2안" Tag="2"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Button Content="재계산" 
                            Command="{Binding RecalculateCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,16,0,0"
                            Padding="16,10"/>
                </StackPanel>
            </Border>

            <!-- XNPV 결과 -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="XNPV 결과" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="XNPV" FontSize="12" Opacity="0.7"/>
                            <TextBlock FontSize="24" FontWeight="Bold" Margin="0,4,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#81C784"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding XnpvResult.Xnpv, Converter={StaticResource LessThanZeroConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="#E57373"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="{Binding XnpvResult.Xnpv, StringFormat=N0, FallbackValue=-}"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="IRR" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="{Binding XnpvResult.Irr, StringFormat=P2, FallbackValue=-}" 
                                       FontSize="24" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="총 유입" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="{Binding XnpvResult.TotalInflow, StringFormat=N0, FallbackValue=-}" 
                                       FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="총 유출" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="{Binding XnpvResult.TotalOutflow, StringFormat=N0, FallbackValue=-}" 
                                       FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0" Foreground="#E57373"/>
                        </StackPanel>

                        <Border Grid.Row="4" Grid.ColumnSpan="2" CornerRadius="8" Padding="12,8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#81C784"/>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding XnpvResult.InvestmentOpinion, FallbackValue=데이터 없음}" 
                                       Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 민감도 분석 -->
            <Border Grid.Column="4" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="할인율 민감도 분석" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding SensitivityResults}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                          HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                          VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                              BorderThickness="0"
                              Background="Transparent"
                              MaxHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="할인율" Binding="{Binding RateDisplay}" Width="80"/>
                            <DataGridTextColumn Header="XNPV" Binding="{Binding XnpvDisplay}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#64B5F6"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- 현금흐름 그리드 -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="현금흐름 상세" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,16"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding CashFlowItems}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                          VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                          BorderThickness="0"
                          Background="Transparent"
                          AlternatingRowBackground="{StaticResource BackgroundColor}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="기간" Binding="{Binding Period}" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="날짜" Binding="{Binding FlowDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                        <DataGridTextColumn Header="설명" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="현금유입" Binding="{Binding CashInflow, StringFormat=N0}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#81C784"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="현금유출" Binding="{Binding CashOutflow, StringFormat=N0}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#E57373"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="순현금흐름" Binding="{Binding NetCashFlow, StringFormat=N0}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="누적" Binding="{Binding CumulativeCashFlow, StringFormat=N0}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#64B5F6"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- 로딩 오버레이 -->
        <Border Grid.RowSpan="3" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="계산 중..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

