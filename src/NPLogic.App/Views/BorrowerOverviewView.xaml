<UserControl x:Class="NPLogic.Views.BorrowerOverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:BorrowerOverviewViewModel}"
             Loaded="BorrowerOverviewView_Loaded">
    
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="차주 개요" 
                           Style="{StaticResource H2TextStyle}"
                           Margin="0,0,0,8"/>
                <TextBlock Style="{StaticResource BodyTextStyle}"
                           Opacity="0.7">
                    <Run Text="전체"/>
                    <Run Text="{Binding TotalCount}" FontWeight="SemiBold"/>
                    <Run Text="건"/>
                    <Run Text=" | "/>
                    <Run Text="회생:"/>
                    <Run Text="{Binding Statistics.RestructuringCount, FallbackValue=0}" FontWeight="SemiBold" Foreground="#E57373"/>
                    <Run Text="건"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="+ 차주 추가" 
                        Command="{Binding AddBorrowerCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,10"
                        Margin="0,0,8,0"/>
                <Button Content="새로고침" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10"/>
            </StackPanel>
        </Grid>

        <!-- 통계 카드 영역 -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 총 차주 수 -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="총 차주 수" Opacity="0.7" FontSize="13"/>
                    <TextBlock Text="{Binding Statistics.TotalCount, FallbackValue=0}" 
                               FontSize="28" FontWeight="Bold" Margin="0,8,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="개인: " Opacity="0.6" FontSize="12"/>
                        <TextBlock Text="{Binding Statistics.IndividualCount, FallbackValue=0}" FontSize="12"/>
                        <TextBlock Text=" | 사업자: " Opacity="0.6" FontSize="12"/>
                        <TextBlock Text="{Binding Statistics.SoleProprietorCount, FallbackValue=0}" FontSize="12"/>
                        <TextBlock Text=" | 법인: " Opacity="0.6" FontSize="12"/>
                        <TextBlock Text="{Binding Statistics.CorporationCount, FallbackValue=0}" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 회생 차주 -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="회생 차주" Opacity="0.7" FontSize="13"/>
                    <TextBlock FontSize="28" FontWeight="Bold" Margin="0,8,0,0" Foreground="#E57373">
                        <Run Text="{Binding Statistics.RestructuringCount, FallbackValue=0}"/>
                        <Run Text="건" FontSize="14" FontWeight="Normal"/>
                    </TextBlock>
                    <CheckBox Content="회생만 표시" 
                              IsChecked="{Binding ShowRestructuringOnly}"
                              Margin="0,8,0,0" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- 총 OPB -->
            <Border Grid.Column="4" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="총 OPB" Opacity="0.7" FontSize="13"/>
                    <TextBlock FontSize="24" FontWeight="Bold" Margin="0,8,0,0">
                        <Run Text="{Binding Statistics.TotalOpb, StringFormat=N0, FallbackValue=0}"/>
                        <Run Text="원" FontSize="14" FontWeight="Normal"/>
                    </TextBlock>
                    <TextBlock Text="Outstanding Principal Balance" Opacity="0.5" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- 총 근저당액 -->
            <Border Grid.Column="6" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="총 근저당설정액" Opacity="0.7" FontSize="13"/>
                    <TextBlock FontSize="24" FontWeight="Bold" Margin="0,8,0,0">
                        <Run Text="{Binding Statistics.TotalMortgageAmount, StringFormat=N0, FallbackValue=0}"/>
                        <Run Text="원" FontSize="14" FontWeight="Normal"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 검색 및 필터 영역 -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 검색바 -->
            <Grid Grid.Column="0">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         Padding="16,12">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock Text="차주번호 또는 차주명으로 검색..."
                          VerticalAlignment="Center"
                          Margin="20,0"
                          Opacity="0.5"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SearchText}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- 프로그램 필터 -->
            <ComboBox Grid.Column="2"
                      ItemsSource="{Binding Programs}"
                      SelectedItem="{Binding SelectedProgramId}"
                      Width="180"
                      Padding="12,10"/>

            <!-- 차주유형 필터 -->
            <ComboBox Grid.Column="4"
                      ItemsSource="{Binding BorrowerTypes}"
                      SelectedItem="{Binding SelectedBorrowerType}"
                      Width="120"
                      Padding="12,10"/>

            <!-- 검색 버튼 -->
            <Button Grid.Column="6"
                    Content="검색" 
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="24,10"/>
        </Grid>

        <!-- 메인 컨텐츠 (좌: 차주 목록, 우: 상세 정보) -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*" MinWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- 차주 목록 그리드 -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="차주 목록" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Borrowers}"
                              SelectedItem="{Binding SelectedBorrower}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="Transparent"
                              AlternatingRowBackground="{StaticResource BackgroundColor}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="차주번호" Binding="{Binding BorrowerNumber}" Width="100"/>
                            <DataGridTextColumn Header="차주명" Binding="{Binding BorrowerName}" Width="*"/>
                            <DataGridTextColumn Header="유형" Binding="{Binding BorrowerType}" Width="80"/>
                            <DataGridTextColumn Header="물건수" Binding="{Binding PropertyCount}" Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="상태" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Margin="2,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#81C784"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRestructuring}" Value="True">
                                                                <Setter Property="Fill" Value="#E57373"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsDeceased}" Value="True">
                                                                <Setter Property="Fill" Value="#9E9E9E"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="회생" FontSize="11" Foreground="#E57373">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRestructuring}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- 차주 상세 정보 -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 선택된 차주가 없을 때 -->
                        <TextBlock Grid.RowSpan="5" 
                                   Text="좌측에서 차주를 선택해주세요"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Opacity="0.5">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBorrower}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- 상세 정보 (선택된 차주가 있을 때) -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBorrower}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- 기본 정보 섹션 -->
                            <TextBlock Text="기본 정보" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,16"/>
                            
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 차주번호 -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="차주번호" Opacity="0.6" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding SelectedBorrower.BorrowerNumber, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="12,10"/>
                                </StackPanel>

                                <!-- 차주명 -->
                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="차주명" Opacity="0.6" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding SelectedBorrower.BorrowerName, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="12,10"/>
                                </StackPanel>

                                <!-- 차주유형 -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="차주유형" Opacity="0.6" FontSize="12" Margin="0,0,0,4"/>
                                    <ComboBox SelectedItem="{Binding SelectedBorrower.BorrowerType}" Padding="12,10">
                                        <ComboBoxItem Content="개인"/>
                                        <ComboBoxItem Content="개인사업자"/>
                                        <ComboBoxItem Content="법인"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 사업자번호 -->
                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <TextBlock Text="사업자번호" Opacity="0.6" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding SelectedBorrower.BusinessNumber, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="12,10"/>
                                </StackPanel>

                                <!-- 대표자 -->
                                <StackPanel Grid.Row="4" Grid.Column="0">
                                    <TextBlock Text="대표자" Opacity="0.6" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding SelectedBorrower.Representative, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="12,10"/>
                                </StackPanel>

                                <!-- 연락처 -->
                                <StackPanel Grid.Row="4" Grid.Column="2">
                                    <TextBlock Text="연락처" Opacity="0.6" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding SelectedBorrower.Phone, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="12,10"/>
                                </StackPanel>
                            </Grid>

                            <!-- 상태 체크박스 -->
                            <TextBlock Text="상태" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <CheckBox Content="회생 (S 차주)" 
                                          IsChecked="{Binding SelectedBorrower.IsRestructuring}"
                                          Margin="0,0,24,0"/>
                                <CheckBox Content="개회" 
                                          IsChecked="{Binding SelectedBorrower.IsOpened}"
                                          Margin="0,0,24,0"/>
                                <CheckBox Content="차주사망" 
                                          IsChecked="{Binding SelectedBorrower.IsDeceased}"/>
                            </StackPanel>

                            <!-- XNPV 결과 -->
                            <TextBlock Text="XNPV 결과" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 1안 -->
                                <Border Grid.Column="0" Background="{StaticResource BackgroundColor}" CornerRadius="8" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="시나리오 1안" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="4"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="XNPV:" Opacity="0.7"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                                       Text="{Binding SelectedBorrower.XnpvScenario1, StringFormat=N0, FallbackValue=-}"
                                                       HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ratio:" Opacity="0.7"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                                       Text="{Binding SelectedBorrower.XnpvRatio1, StringFormat=P2, FallbackValue=-}"
                                                       HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- 2안 -->
                                <Border Grid.Column="2" Background="{StaticResource BackgroundColor}" CornerRadius="8" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="시나리오 2안" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="4"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="XNPV:" Opacity="0.7"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                                       Text="{Binding SelectedBorrower.XnpvScenario2, StringFormat=N0, FallbackValue=-}"
                                                       HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ratio:" Opacity="0.7"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                                       Text="{Binding SelectedBorrower.XnpvRatio2, StringFormat=P2, FallbackValue=-}"
                                                       HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- 담보 물건 목록 -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*" MinHeight="150"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12">
                                    <Run Text="담보 물건 목록 ("/>
                                    <Run Text="{Binding BorrowerProperties.Count, Mode=OneWay, FallbackValue=0}"/>
                                    <Run Text="건)"/>
                                </TextBlock>

                                <DataGrid Grid.Row="1"
                                          ItemsSource="{Binding BorrowerProperties}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          BorderThickness="1"
                                          BorderBrush="{StaticResource BorderColor}"
                                          Background="Transparent"
                                          MaxHeight="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="물건번호" Binding="{Binding PropertyNumber}" Width="100"/>
                                        <DataGridTextColumn Header="유형" Binding="{Binding PropertyType}" Width="70"/>
                                        <DataGridTextColumn Header="주소" Binding="{Binding AddressFull}" Width="*"/>
                                        <DataGridTextColumn Header="감정가" Binding="{Binding AppraisalValue, StringFormat=N0}" Width="100">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTemplateColumn Header="상세" Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="보기" 
                                                            Command="{Binding DataContext.ViewPropertyDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource SecondaryButton}"
                                                            Padding="8,4"
                                                            FontSize="11"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>

                            <!-- 저장 버튼 -->
                            <Button Content="저장" 
                                    Command="{Binding SaveBorrowerCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    HorizontalAlignment="Right"
                                    Padding="32,12"
                                    Margin="0,24,0,0"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 페이지네이션 -->
        <Grid Grid.Row="4" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="◀ 이전" 
                        Command="{Binding PreviousPageCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="16,8"
                        Margin="0,0,8,0"/>
                <TextBlock VerticalAlignment="Center" Margin="8,0">
                    <Run Text="{Binding CurrentPage}"/>
                    <Run Text="/"/>
                    <Run Text="{Binding TotalPages}"/>
                </TextBlock>
                <Button Content="다음 ▶" 
                        Command="{Binding NextPageCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="16,8"
                        Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Border Grid.RowSpan="5" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="로딩 중..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- 에러 메시지 -->
        <Border Grid.Row="4" Background="#E57373" CornerRadius="8" Padding="16" Margin="0,16,0,0"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="White" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>

