<UserControl x:Class="NPLogic.Views.AuditLogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:AuditLogsViewModel}"
             Loaded="AuditLogsView_Loaded">
    
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="작업 이력" 
                           Style="{StaticResource H2TextStyle}"
                           Margin="0,0,0,8"/>
                <TextBlock Style="{StaticResource BodyTextStyle}"
                           Opacity="0.7">
                    <Run Text="총"/>
                    <Run Text="{Binding TotalCount, FallbackValue=0}"/>
                    <Run Text="건의 이력"/>
                </TextBlock>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="새로고침" 
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="20,10"/>
        </Grid>

        <!-- 필터 영역 -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 테이블 필터 -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="테이블" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding TableNames}" 
                              SelectedItem="{Binding SelectedTableName}"
                              Width="150" Padding="10,8"/>
                </StackPanel>

                <!-- 액션 필터 -->
                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <TextBlock Text="액션" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Actions}" 
                              SelectedItem="{Binding SelectedAction}"
                              Width="120" Padding="10,8"/>
                </StackPanel>

                <!-- 시작일 -->
                <StackPanel Grid.Column="2" Margin="0,0,16,0">
                    <TextBlock Text="시작일" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="130"/>
                </StackPanel>

                <!-- 종료일 -->
                <StackPanel Grid.Column="3" Margin="0,0,16,0">
                    <TextBlock Text="종료일" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="130"/>
                </StackPanel>

                <!-- 검색 -->
                <StackPanel Grid.Column="4" Margin="0,0,16,0">
                    <TextBlock Text="검색" FontSize="11" Opacity="0.6" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10,8"
                             Width="200"/>
                </StackPanel>

                <!-- 검색 버튼 -->
                <Button Grid.Column="5" 
                        Content="검색" 
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="16,8"
                        VerticalAlignment="Bottom"
                        Margin="0,0,8,0"/>

                <!-- 초기화 버튼 -->
                <Button Grid.Column="6" 
                        Content="초기화" 
                        Command="{Binding ResetFilterCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="16,8"
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 이력 목록 -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="8" Padding="16">
                <DataGrid ItemsSource="{Binding AuditLogs}" 
                          SelectedItem="{Binding SelectedLog}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Background="{StaticResource SurfaceBrush}"
                          BorderBrush="{StaticResource TableBorderBrush}"
                          BorderThickness="1"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                          VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          RowHeight="40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="일시" 
                                            Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm:ss}" 
                                            Width="150"/>
                        <DataGridTemplateColumn Header="액션" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Action}" Value="INSERT">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Action}" Value="UPDATE">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Action}" Value="DELETE">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding ActionDisplay}" FontSize="12" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#1976D2"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Action}" Value="INSERT">
                                                            <Setter Property="Foreground" Value="#388E3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Action}" Value="UPDATE">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Action}" Value="DELETE">
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="테이블" 
                                            Binding="{Binding TableNameDisplay}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="사용자" 
                                            Binding="{Binding UserEmail}" 
                                            Width="180"/>
                        <DataGridTextColumn Header="변경 내용" 
                                            Binding="{Binding ChangeSummary}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="레코드 ID" 
                                            Binding="{Binding RecordId}" 
                                            Width="280"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- 상세 패널 -->
            <Border Grid.Column="1" 
                    Background="{StaticResource SurfaceColor}" 
                    CornerRadius="8" 
                    Padding="16"
                    Width="400"
                    Margin="16,0,0,0"
                    Visibility="{Binding IsDetailVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="변경 상세" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        <Button Content="✕" 
                                Command="{Binding CloseDetailCommand}"
                                Style="{StaticResource SecondaryButton}"
                                HorizontalAlignment="Right"
                                Padding="8,4"/>
                    </Grid>

                    <!-- 기본 정보 -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="일시:" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="{Binding SelectedLog.CreatedAt, StringFormat=yyyy-MM-dd HH:mm:ss}"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="사용자:" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="{Binding SelectedLog.UserEmail}" TextTrimming="CharacterEllipsis"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="IP:" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="{Binding SelectedLog.IpAddress}"/>
                        </Grid>
                    </StackPanel>

                    <!-- 이전 데이터 -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="이전 데이터" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="#1A000000" CornerRadius="4" Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                                <TextBox Text="{Binding DetailOldData, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>

                    <!-- 새 데이터 -->
                    <StackPanel Grid.Row="3" Margin="0,16,0,0">
                        <TextBlock Text="새 데이터" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="#1A000000" CornerRadius="4" Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                                <TextBox Text="{Binding DetailNewData, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Border Grid.RowSpan="3" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="로딩 중..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- 에러 메시지 -->
        <Border Grid.Row="1" 
                Background="#FFEBEE" 
                CornerRadius="8" 
                Padding="16" 
                VerticalAlignment="Top"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828"/>
        </Border>
    </Grid>
</UserControl>

