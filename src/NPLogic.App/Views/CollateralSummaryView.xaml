<UserControl x:Class="NPLogic.Views.CollateralSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:CollateralSummaryViewModel}"
             Loaded="CollateralSummaryView_Loaded">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="500"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- 뒤로가기 버튼 -->
                <Button x:Name="BackButton"
                        Style="{StaticResource IconButton}"
                        Width="36" Height="36"
                        Margin="0,0,12,0"
                        Click="BackButton_Click"
                        ToolTip="대시보드로 돌아가기">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="20" Height="20"/>
                </Button>
                
                <StackPanel>
                    <TextBlock Text="물건 목록" 
                               Style="{StaticResource H2TextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBlock Style="{StaticResource BodyTextStyle}" Opacity="0.7">
                        <Run Text="차주별 담보 물건 요약 및 Loan Cap 검토"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Excel 내보내기" 
                        Command="{Binding ExportToExcelCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10"
                        Margin="0,0,8,0"/>
                <Button Content="새로고침" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,10"/>
            </StackPanel>
        </Grid>

        <!-- 검색 및 필터 영역 -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 검색바 -->
            <Grid Grid.Column="0">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         Padding="16,12">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock Text="차주번호 또는 차주명으로 검색..."
                          VerticalAlignment="Center"
                          Margin="20,0"
                          Opacity="0.5"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SearchText}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- 프로그램 필터 -->
            <ComboBox Grid.Column="2"
                      ItemsSource="{Binding Programs}"
                      SelectedItem="{Binding SelectedProgramId}"
                      Width="180"
                      Padding="12,10"/>

            <!-- 검색 버튼 -->
            <Button Grid.Column="4"
                    Content="검색" 
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="24,10"/>
        </Grid>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="250"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 차주 목록 (좌측) -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="차주 목록" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Borrowers}"
                             SelectedItem="{Binding SelectedBorrower}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,10" Margin="0,2">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding BorrowerName}" FontWeight="SemiBold"/>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding BorrowerNumber}" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                            <TextBlock Text=" | " FontSize="{StaticResource FontSizeBody}" Opacity="0.5"/>
                                            <TextBlock Text="{Binding PropertyCount}" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                            <TextBlock Text="건" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Background="Transparent" CornerRadius="8">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource BackgroundColor}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 담보 물건 상세 (우측) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 담보 물건 그리드 -->
                <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20" MinHeight="350">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 헤더 -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontWeight="SemiBold" FontSize="16">
                                    <Run Text="담보 물건 목록"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding SelectedBorrower.BorrowerName, FallbackValue='차주 선택'}"/>
                                </TextBlock>
                                <TextBlock FontSize="13" Opacity="0.7" Margin="0,4,0,0">
                                    <Run Text="프로그램: "/>
                                    <Run Text="{Binding SelectedBorrower.ProgramId, FallbackValue='-'}"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Column="1" FontSize="{StaticResource FontSizeH4}" VerticalAlignment="Center" Margin="0,0,16,0">
                                <Run Text="총 "/>
                                <Run Text="{Binding TotalPropertyCount}" FontWeight="Bold"/>
                                <Run Text="건"/>
                            </TextBlock>
                            
                            <Button Grid.Column="2"
                                    Content="크게보기" 
                                    Command="{Binding ViewCollateralDetailCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="12,6"
                                    FontSize="{StaticResource FontSizeBody}"
                                    VerticalAlignment="Center"/>
                        </Grid>

                        <!-- 선택된 차주가 없을 때 -->
                        <TextBlock Grid.Row="2" 
                                   Text="좌측에서 차주를 선택해주세요"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Opacity="0.5">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBorrower}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- 데이터 그리드 -->
                        <ScrollViewer Grid.Row="2" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto">
                            <DataGrid ItemsSource="{Binding CollateralItems}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="All"
                                      HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                                      VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      RowBackground="Transparent"
                                      AlternatingRowBackground="{StaticResource BackgroundColor}"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Disabled">
                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedBorrower}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Style>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="물건번호" Binding="{Binding PropertyNumber}" Width="100"/>
                                    <DataGridTextColumn Header="담보종류" Binding="{Binding CollateralType}" Width="80"/>
                                    <DataGridTextColumn Header="담보소재지" Binding="{Binding Address}" Width="150"/>
                                    <DataGridTextColumn Header="토지면적" Binding="{Binding LandArea, StringFormat=N2}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="건물면적" Binding="{Binding BuildingArea, StringFormat=N2}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="감정평가액" Binding="{Binding AppraisalValue, StringFormat=N0}" Width="110">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="평가액" Binding="{Binding EstimatedValue, StringFormat=N0}" Width="110">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="선순위" Binding="{Binding SeniorRights, StringFormat=N0}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Foreground" Value="#E57373"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="배당가능" Binding="{Binding RecoverableAmount, StringFormat=N0}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Foreground" Value="#81C784"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="진행률" Binding="{Binding ProgressDisplay}" Width="70">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="상세" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="상세" 
                                                        Command="{Binding DataContext.ViewPropertyDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource SecondaryButton}"
                                                        MinWidth="60"
                                                        MinHeight="28"
                                                        Padding="10,4"
                                                        FontSize="{StaticResource FontSizeBody}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- 합계 및 Loan Cap 섹션 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 합계 카드 -->
                    <Border Grid.Column="0" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="감정평가액 합계" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0">
                                    <Run Text="{Binding TotalAppraisalValue, StringFormat=N0}"/>
                                    <Run Text="원" FontSize="11" FontWeight="Normal"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="평가액 합계" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0">
                                    <Run Text="{Binding TotalEstimatedValue, StringFormat=N0}"/>
                                    <Run Text="원" FontSize="11" FontWeight="Normal"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="선순위 합계" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0" Foreground="#E57373">
                                    <Run Text="{Binding TotalSeniorRights, StringFormat=N0}"/>
                                    <Run Text="원" FontSize="11" FontWeight="Normal"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="배당가능재원 합계" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0" Foreground="#81C784">
                                    <Run Text="{Binding TotalRecoverable, StringFormat=N0}"/>
                                    <Run Text="원" FontSize="11" FontWeight="Normal"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Loan Cap 검토 카드 -->
                    <Border Grid.Column="2" Background="{StaticResource SurfaceColor}" CornerRadius="12" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Loan Cap" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0">
                                    <Run Text="{Binding LoanCap, StringFormat=N0}"/>
                                    <Run Text="원" FontSize="11" FontWeight="Normal"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Cap 반영 후" FontSize="{StaticResource FontSizeBody}" Opacity="0.7"/>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0" Foreground="#64B5F6">
                                    <Run Text="{Binding CapAdjustedAmount, StringFormat=N0}"/>
                                    <Run Text="원" FontSize="11" FontWeight="Normal"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Border CornerRadius="4" Padding="12,6">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#81C784"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TotalRecoverable}" Value="0">
                                                    <Setter Property="Background" Value="#9E9E9E"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="Cap 적용 가능" Foreground="White" FontWeight="SemiBold" FontSize="{StaticResource FontSizeBody}" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Cap 적용 가능"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TotalRecoverable}" Value="0">
                                                        <Setter Property="Text" Value="데이터 없음"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Border Grid.RowSpan="3" Background="#80000000" CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="로딩 중..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- 에러 메시지 -->
        <Border Grid.Row="2" Background="#E57373" CornerRadius="8" Padding="16" Margin="0,16,0,0"
                VerticalAlignment="Bottom"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="White" TextWrapping="Wrap"/>
        </Border>
    </Grid>
    </ScrollViewer>
</UserControl>

