<UserControl x:Class="NPLogic.Views.ProgramManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPLogic.Views"
             xmlns:vm="clr-namespace:NPLogic.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:ProgramManagementViewModel}"
             Loaded="ProgramManagementView_Loaded">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="← 뒤로"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="#80FFFFFF"
                        Padding="12,6"
                        Margin="0,0,16,0"/>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="프로그램 관리" 
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <TextBlock Text="프로그램 생성, 수정, PM 배정" 
                               Foreground="#B0FFFFFF"
                               FontSize="12"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="새 프로그램 등록"
                            Command="{Binding ShowAddFormCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Background="White"
                            Foreground="{StaticResource PrimaryBrush}"
                            Padding="16,8"
                            Margin="0,0,8,0"/>
                    <Button Content="새로고침"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Foreground="White"
                            Background="Transparent"
                            BorderBrush="#80FFFFFF"
                            Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <!-- 프로그램 목록 -->
            <Border Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>

                <DataGrid ItemsSource="{Binding Programs}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="{StaticResource TableBorderBrush}"
                          VerticalGridLinesBrush="{StaticResource TableBorderBrush}"
                          HeadersVisibility="Column"
                          Background="Transparent"
                          BorderThickness="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="프로그램명" 
                                          Binding="{Binding ProgramName}" 
                                          Width="150"
                                          IsReadOnly="True"/>
                        
                        <DataGridTextColumn Header="담당팀" 
                                          Binding="{Binding Team}" 
                                          Width="100"
                                          IsReadOnly="True"/>
                        
                        <DataGridTextColumn Header="회계법인" 
                                          Binding="{Binding AccountingFirm}" 
                                          Width="120"
                                          IsReadOnly="True"/>
                        
                        <DataGridTextColumn Header="차주수" 
                                          Binding="{Binding BorrowerCount}" 
                                          Width="80"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="물건수" 
                                          Binding="{Binding PropertyCount}" 
                                          Width="80"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Cut-off" 
                                          Binding="{Binding CutOffDate, StringFormat=yyyy-MM-dd}" 
                                          Width="100"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="입찰일" 
                                          Binding="{Binding BidDate, StringFormat=yyyy-MM-dd}" 
                                          Width="100"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTemplateColumn Header="상태" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="inactive">
                                                        <Setter Property="Background" Value="{StaticResource BlueGray300Brush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="completed">
                                                        <Setter Property="Background" Value="{StaticResource InfoBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Foreground="White" FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="활성"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="inactive">
                                                            <Setter Property="Text" Value="비활성"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="completed">
                                                            <Setter Property="Text" Value="완료"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="작업" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="수정"
                                                Command="{Binding DataContext.ShowEditFormCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource PrimaryButton}"
                                                Padding="8,4"
                                                FontSize="11"
                                                Margin="0,0,4,0"/>
                                        <Button Content="삭제"
                                                Command="{Binding DataContext.DeleteProgramCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Background="{StaticResource ErrorBrush}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="8,4"
                                                FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BlueGray100Brush}"/>
                            <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BlueGray200Brush}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BlueGray100Brush}"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource DeepNavy700Brush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Border>

            <!-- 폼 오버레이 -->
            <Grid Visibility="{Binding IsFormVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                  Background="#80000000">
                <Border Background="White"
                        CornerRadius="8"
                        Padding="32"
                        MaxWidth="500"
                        MaxHeight="600"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <!-- 폼 헤더 -->
                        <Grid Margin="0,0,0,24">
                            <TextBlock Text="{Binding FormTitle}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DeepNavy700Brush}"/>
                            <Button Content="✕"
                                    HorizontalAlignment="Right"
                                    Command="{Binding CloseFormCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="8,4"
                                    FontSize="16"/>
                        </Grid>

                        <!-- 프로그램명 -->
                        <TextBlock Text="프로그램명 *" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding FormProgramName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,16"/>

                        <!-- 담당팀 -->
                        <TextBlock Text="담당팀" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding FormTeam, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,16"/>

                        <!-- 회계법인 -->
                        <TextBlock Text="담당 회계법인" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding FormAccountingFirm, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,16"/>

                        <!-- 날짜 -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Cut-off 날짜" 
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding FormCutOffDate}"
                                            Style="{StaticResource DatePickerStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="입찰일" 
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding FormBidDate}"
                                            Style="{StaticResource DatePickerStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- PM 배정 -->
                        <TextBlock Text="담당 PM" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding PmUsers}"
                                  SelectedItem="{Binding FormSelectedPM}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Margin="0,0,0,24"/>

                        <!-- 버튼 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="취소"
                                    Command="{Binding CloseFormCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="16,8"
                                    Margin="0,0,8,0"/>
                            <Button Content="저장"
                                    Command="{Binding SaveProgramCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="24,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 로딩 오버레이 -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  Background="#80FFFFFF">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                    <TextBlock Text="처리 중..." 
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

