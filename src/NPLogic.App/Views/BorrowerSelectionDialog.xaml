<Window x:Class="NPLogic.Views.BorrowerSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="차주 선택"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 제목 -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Title}" 
                   FontSize="{StaticResource FontSizeH2}" 
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   Margin="0,0,0,16"/>
        
        <!-- 전체 선택 / 해제 버튼 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="전체 선택" 
                    Click="SelectAll_Click"
                    Style="{StaticResource SecondaryButton}"
                    Padding="16,8"
                    Margin="0,0,8,0"/>
            <Button Content="전체 해제" 
                    Click="DeselectAll_Click"
                    Style="{StaticResource SecondaryButton}"
                    Padding="16,8"
                    Margin="0,0,16,0"/>
            <TextBlock VerticalAlignment="Center" 
                       FontSize="{StaticResource FontSizeBody}"
                       Foreground="{StaticResource SecondaryTextBrush}">
                <Run Text="선택된 차주:"/>
                <Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="SemiBold"/>
                <Run Text="/"/>
                <Run Text="{Binding TotalCount, Mode=OneWay}"/>
            </TextBlock>
        </StackPanel>
        
        <!-- 차주 목록 -->
        <Border Grid.Row="2" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource SurfaceBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                <ItemsControl ItemsSource="{Binding Borrowers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Checked="BorrowerCheckBox_Changed"
                                      Unchecked="BorrowerCheckBox_Changed">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding BorrowerNumber}" 
                                                   Width="100" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding BorrowerName}" 
                                                   Width="200"/>
                                        <TextBlock Foreground="{StaticResource SecondaryTextBrush}">
                                            <Run Text="(물건"/>
                                            <Run Text="{Binding PropertyCount, Mode=OneWay}"/>
                                            <Run Text="건)"/>
                                        </TextBlock>
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- 설명 -->
        <TextBlock Grid.Row="3" 
                   Margin="0,12,0,16"
                   FontSize="{StaticResource FontSizeBody}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   TextWrapping="Wrap">
            <Run Text="※"/>
            <Run Text="{Binding Description, Mode=OneWay}"/>
        </TextBlock>
        
        <!-- 버튼 -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="취소" 
                    Click="Cancel_Click"
                    Style="{StaticResource SecondaryButton}"
                    Padding="24,10"
                    Margin="0,0,8,0"/>
            <Button Content="{Binding ActionButtonText}" 
                    Click="Confirm_Click"
                    Padding="24,10"
                    IsEnabled="{Binding HasSelection}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSelection}" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
