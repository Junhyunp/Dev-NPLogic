<UserControl x:Class="NPLogic.Controls.NPModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Visibility="Collapsed">
    
    <!-- Overlay -->
    <Grid x:Name="ModalOverlay" 
          Background="#80000000"
          MouseDown="Overlay_MouseDown">
        
        <!-- Modal Dialog -->
        <Border Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                MaxWidth="{Binding ModalMaxWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                MaxHeight="{Binding ModalMaxHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                MinWidth="400"
                Margin="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MouseDown="Dialog_MouseDown">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                Opacity="0.3" 
                                BlurRadius="20" 
                                ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        BorderBrush="{StaticResource DividerBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="24,16">
                    <Grid>
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Style="{StaticResource H3TextStyle}"
                                   VerticalAlignment="Center"/>
                        
                        <Button x:Name="CloseButton"
                                Style="{StaticResource IconButton}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Click="CloseButton_Click"
                                ToolTip="닫기">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                  Fill="{StaticResource TextSecondaryBrush}"
                                  Width="16"
                                  Height="16"
                                  Stretch="Uniform"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1"
                             VerticalScrollBarVisibility="Auto"
                             Padding="24"
                             MaxHeight="500">
                    <ContentPresenter Content="{Binding ModalContent, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        BorderBrush="{StaticResource DividerBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="24,16"
                        Visibility="{Binding FooterContent, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}">
                    <ContentPresenter Content="{Binding FooterContent, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     HorizontalAlignment="Right"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
    
</UserControl>

