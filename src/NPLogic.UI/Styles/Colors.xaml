<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Navy Blue (남색 - 베이스) - 피드백 반영: 기존 남색 톤으로 변경 -->
    <Color x:Key="Primary">#1E3A5F</Color>
    <Color x:Key="PrimaryLight">#2D5986</Color>
    <Color x:Key="PrimaryDark">#152A47</Color>
    <Color x:Key="DeepNavy700">#1E3A5F</Color>
    
    <!-- Header용 남색 (더 진한 톤) -->
    <Color x:Key="HeaderNavy">#1A2F4A</Color>
    <SolidColorBrush x:Key="HeaderNavyBrush" Color="{StaticResource HeaderNavy}"/>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="DeepNavy700Brush" Color="{StaticResource DeepNavy700}"/>

    <!-- Light Blue Gray (밝은 블루그레이 - 표) -->
    <Color x:Key="BlueGray50">#F8FBFD</Color>
    <Color x:Key="BlueGray100">#EDF4F9</Color>
    <Color x:Key="BlueGray200">#DDE8F2</Color>
    <Color x:Key="BlueGray300">#CBD5E1</Color>
    <Color x:Key="TableHeader">#E8F1F8</Color>
    <Color x:Key="TableHover">#F0F8FF</Color>
    <Color x:Key="TableSelected">#C8E0F4</Color>
    <Color x:Key="TableBorder">#D0D5DD</Color>
    
    <SolidColorBrush x:Key="BlueGray50Brush" Color="{StaticResource BlueGray50}"/>
    <SolidColorBrush x:Key="BlueGray100Brush" Color="{StaticResource BlueGray100}"/>
    <SolidColorBrush x:Key="BlueGray200Brush" Color="{StaticResource BlueGray200}"/>
    <SolidColorBrush x:Key="BlueGray300Brush" Color="{StaticResource BlueGray300}"/>
    <Color x:Key="BlueGray400">#94A3B8</Color>
    <SolidColorBrush x:Key="BlueGray400Brush" Color="{StaticResource BlueGray400}"/>
    <SolidColorBrush x:Key="TableHeaderBrush" Color="{StaticResource TableHeader}"/>
    <SolidColorBrush x:Key="TableHoverBrush" Color="{StaticResource TableHover}"/>
    <SolidColorBrush x:Key="TableSelectedBrush" Color="{StaticResource TableSelected}"/>
    <SolidColorBrush x:Key="TableBorderBrush" Color="{StaticResource TableBorder}"/>

    <!-- Neutral Colors (중립 색상) -->
    <Color x:Key="Background">#FAFBFC</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="Border">#E5E7EB</Color>
    <Color x:Key="Divider">#D0D5DD</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="SurfaceColor" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="BorderColor" Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource Divider}"/>

    <!-- Text Colors (피드백 반영: 회색 텍스트 가독성 개선 - 더 진한 색상) -->
    <Color x:Key="TextPrimary">#1F2937</Color>
    <Color x:Key="TextSecondary">#4B5563</Color>
    <Color x:Key="TextMuted">#475569</Color>
    <Color x:Key="TextTertiary">#64748B</Color>
    <Color x:Key="TextDisabled">#9CA3AF</Color>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>


    <!-- Semantic Colors (상태 표시) - 피드백 반영: 채도 낮춘 녹색 -->
    <Color x:Key="Success">#059669</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#1E3A5F</Color>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>

    <!-- Badge Colors - Lighter backgrounds -->
    <Color x:Key="SuccessBg">#DCFCE7</Color>
    <Color x:Key="SuccessText">#166534</Color>
    <Color x:Key="WarningBg">#FEF3C7</Color>
    <Color x:Key="WarningText">#92400E</Color>
    <Color x:Key="ErrorBg">#FEE2E2</Color>
    <Color x:Key="ErrorText">#991B1B</Color>
    <Color x:Key="InfoBg">#E0F2FE</Color>
    <Color x:Key="InfoText">#075985</Color>
    
    <SolidColorBrush x:Key="SuccessBgBrush" Color="{StaticResource SuccessBg}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessBg}"/>
    <SolidColorBrush x:Key="SuccessTextBrush" Color="{StaticResource SuccessText}"/>
    <SolidColorBrush x:Key="WarningBgBrush" Color="{StaticResource WarningBg}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningBg}"/>
    <SolidColorBrush x:Key="WarningTextBrush" Color="{StaticResource WarningText}"/>
    <SolidColorBrush x:Key="ErrorBgBrush" Color="{StaticResource ErrorBg}"/>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="{StaticResource ErrorText}"/>
    <SolidColorBrush x:Key="InfoBgBrush" Color="{StaticResource InfoBg}"/>
    <SolidColorBrush x:Key="InfoTextBrush" Color="{StaticResource InfoText}"/>

    <!-- Overlay Colors (모달/팝업 배경) -->
    <Color x:Key="Overlay">#80000000</Color>
    <Color x:Key="OverlayLight">#33FFFFFF</Color>
    <Color x:Key="OverlaySemiLight">#80FFFFFF</Color>
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource Overlay}"/>
    <SolidColorBrush x:Key="OverlayLightBrush" Color="{StaticResource OverlayLight}"/>
    <SolidColorBrush x:Key="OverlaySemiLightBrush" Color="{StaticResource OverlaySemiLight}"/>

    <!-- Card Alternative Backgrounds -->
    <Color x:Key="CardAlt">#F8FAFC</Color>
    <Color x:Key="CardAlt2">#F0F5F9</Color>
    <Color x:Key="CardAlt3">#F1F5F9</Color>
    <SolidColorBrush x:Key="CardAltBrush" Color="{StaticResource CardAlt}"/>
    <SolidColorBrush x:Key="CardAlt2Brush" Color="{StaticResource CardAlt2}"/>
    <SolidColorBrush x:Key="CardAlt3Brush" Color="{StaticResource CardAlt3}"/>

    <!-- Material Design Style Semantic Colors (기존 하드코딩 통합) -->
    <Color x:Key="MaterialGreen">#81C784</Color>
    <Color x:Key="MaterialGreenDark">#2E7D32</Color>
    <Color x:Key="MaterialGreenBg">#E8F5E9</Color>
    <Color x:Key="MaterialRed">#E57373</Color>
    <Color x:Key="MaterialRedDark">#C62828</Color>
    <Color x:Key="MaterialRedBg">#FFEBEE</Color>
    <Color x:Key="MaterialBlue">#64B5F6</Color>
    <Color x:Key="MaterialBlueDark">#1565C0</Color>
    <Color x:Key="MaterialBlueBg">#E3F2FD</Color>
    <Color x:Key="MaterialOrange">#D97706</Color>
    <Color x:Key="MaterialOrangeBg">#FEF3C7</Color>
    
    <SolidColorBrush x:Key="MaterialGreenBrush" Color="{StaticResource MaterialGreen}"/>
    <SolidColorBrush x:Key="MaterialGreenDarkBrush" Color="{StaticResource MaterialGreenDark}"/>
    <SolidColorBrush x:Key="MaterialGreenBgBrush" Color="{StaticResource MaterialGreenBg}"/>
    <SolidColorBrush x:Key="MaterialRedBrush" Color="{StaticResource MaterialRed}"/>
    <SolidColorBrush x:Key="MaterialRedDarkBrush" Color="{StaticResource MaterialRedDark}"/>
    <SolidColorBrush x:Key="MaterialRedBgBrush" Color="{StaticResource MaterialRedBg}"/>
    <SolidColorBrush x:Key="MaterialBlueBrush" Color="{StaticResource MaterialBlue}"/>
    <SolidColorBrush x:Key="MaterialBlueDarkBrush" Color="{StaticResource MaterialBlueDark}"/>
    <SolidColorBrush x:Key="MaterialBlueBgBrush" Color="{StaticResource MaterialBlueBg}"/>
    <SolidColorBrush x:Key="MaterialOrangeBrush" Color="{StaticResource MaterialOrange}"/>
    <SolidColorBrush x:Key="MaterialOrangeBgBrush" Color="{StaticResource MaterialOrangeBg}"/>

    <!-- White text variants (헤더/배너용) -->
    <Color x:Key="TextWhite">#FFFFFF</Color>
    <Color x:Key="TextWhite70">#B3FFFFFF</Color>
    <Color x:Key="TextWhite80">#CCFFFFFF</Color>
    <Color x:Key="TextWhite50">#80FFFFFF</Color>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="{StaticResource TextWhite}"/>
    <SolidColorBrush x:Key="TextWhite70Brush" Color="{StaticResource TextWhite70}"/>
    <SolidColorBrush x:Key="TextWhite80Brush" Color="{StaticResource TextWhite80}"/>
    <SolidColorBrush x:Key="TextWhite50Brush" Color="{StaticResource TextWhite50}"/>

    <!-- Dark Panel Colors (어두운 패널용 - 사이드바 등) -->
    <Color x:Key="DarkPanel">#263238</Color>
    <Color x:Key="DarkPanelHover">#3F4E6B</Color>
    <Color x:Key="TextOnDark">#B0BEC5</Color>
    <Color x:Key="AccentOnDark">#FFD700</Color>
    <SolidColorBrush x:Key="DarkPanelBrush" Color="{StaticResource DarkPanel}"/>
    <SolidColorBrush x:Key="DarkPanelHoverBrush" Color="{StaticResource DarkPanelHover}"/>
    <SolidColorBrush x:Key="TextOnDarkBrush" Color="{StaticResource TextOnDark}"/>
    <SolidColorBrush x:Key="AccentOnDarkBrush" Color="{StaticResource AccentOnDark}"/>

    <!-- Input Field Colors (입력 필드 구분용) -->
    <!-- 수기 입력 필드 - 노란색 계열 (사용자가 직접 입력해야 하는 곳) -->
    <Color x:Key="ManualInputBg">#FFF9C4</Color>
    <Color x:Key="ManualInputBorder">#FBC02D</Color>
    <SolidColorBrush x:Key="ManualInputBgBrush" Color="{StaticResource ManualInputBg}"/>
    <SolidColorBrush x:Key="ManualInputBorderBrush" Color="{StaticResource ManualInputBorder}"/>

    <!-- 날짜 입력 필드 - 연한 보라색 계열 (날짜가 들어가는 곳) -->
    <Color x:Key="DateInputBg">#EDE7F6</Color>
    <Color x:Key="DateInputBorder">#9575CD</Color>
    <SolidColorBrush x:Key="DateInputBgBrush" Color="{StaticResource DateInputBg}"/>
    <SolidColorBrush x:Key="DateInputBorderBrush" Color="{StaticResource DateInputBorder}"/>

    <!-- 계산 결과 필드 - 연한 파란색 계열 (자동 계산 결과) -->
    <Color x:Key="ResultFieldBg">#E3F2FD</Color>
    <Color x:Key="ResultFieldBorder">#64B5F6</Color>
    <SolidColorBrush x:Key="ResultFieldBgBrush" Color="{StaticResource ResultFieldBg}"/>
    <SolidColorBrush x:Key="ResultFieldBorderBrush" Color="{StaticResource ResultFieldBorder}"/>

    <!-- 읽기 전용 필드 - 회색 계열 -->
    <Color x:Key="ReadOnlyFieldBg">#F5F5F5</Color>
    <SolidColorBrush x:Key="ReadOnlyFieldBgBrush" Color="{StaticResource ReadOnlyFieldBg}"/>

</ResourceDictionary>

