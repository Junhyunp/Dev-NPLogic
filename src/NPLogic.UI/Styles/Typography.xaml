<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Font Families -->
    <FontFamily x:Key="FontPrimary">Segoe UI, Malgun Gothic, sans-serif</FontFamily>
    <FontFamily x:Key="FontMonospace">Consolas, Courier New, monospace</FontFamily>

    <!-- Font Sizes - 대시보드 기준 통일 (피드백 반영: 본문 12pt 기준) -->
    <System:Double x:Key="FontSizeH1" xmlns:System="clr-namespace:System;assembly=mscorlib">24</System:Double>
    <System:Double x:Key="FontSizeH2" xmlns:System="clr-namespace:System;assembly=mscorlib">18</System:Double>
    <System:Double x:Key="FontSizeH3" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
    <System:Double x:Key="FontSizeH4" xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>
    <System:Double x:Key="FontSizeBody" xmlns:System="clr-namespace:System;assembly=mscorlib">12</System:Double>
    <System:Double x:Key="FontSizeSmall" xmlns:System="clr-namespace:System;assembly=mscorlib">11</System:Double>
    <System:Double x:Key="FontSizeTiny" xmlns:System="clr-namespace:System;assembly=mscorlib">10</System:Double>
    
    <!-- 추가 폰트 크기 (통계/대형 숫자용) -->
    <System:Double x:Key="FontSizeLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">20</System:Double>
    <System:Double x:Key="FontSizeXLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">28</System:Double>
    <System:Double x:Key="FontSizeXXLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">36</System:Double>
    <System:Double x:Key="FontSizeHero" xmlns:System="clr-namespace:System;assembly=mscorlib">48</System:Double>

    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <!-- Text Styles -->
    <Style x:Key="H1TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH1}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="H2TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH2}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="H3TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH3}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="H4TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH4}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="SmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="TinyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeTiny}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontStyle" Value="Normal"/>
    </Style>

    <!-- =============================================== -->
    <!-- 공통 UI 스타일 (피드백 반영: 전반적 통일) -->
    <!-- =============================================== -->

    <!-- 섹션 헤더 스타일 (전체 화면 통일) -->
    <Style x:Key="SectionHeader" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH4}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 소섹션 헤더 스타일 -->
    <Style x:Key="SubSectionHeader" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 라벨 스타일 (폼/테이블 라벨용) -->
    <Style x:Key="LabelText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 값 스타일 (폼/테이블 값용) -->
    <Style x:Key="ValueText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 금액 스타일 (강조 숫자용) -->
    <Style x:Key="AmountText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH4}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 큰 금액 스타일 -->
    <Style x:Key="LargeAmountText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 퍼센트 스타일 -->
    <Style x:Key="PercentText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH4}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 상태 뱃지 텍스트 -->
    <Style x:Key="BadgeText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- 메뉴 텍스트 스타일 (사이드바용) -->
    <Style x:Key="MenuTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 약한 텍스트 스타일 (보조 정보용) -->
    <Style x:Key="MutedTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}"/>
        <Setter Property="Foreground" Value="{StaticResource BlueGray400Brush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 통계 숫자 스타일 (대형 숫자용) -->
    <Style x:Key="StatNumberStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeXLarge}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 히어로 숫자 스타일 (최대 크기) -->
    <Style x:Key="HeroNumberStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeHero}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- =============================================== -->
    <!-- 탭/메뉴 스타일 (피드백 반영: 전체 통일) -->
    <!-- =============================================== -->

    <!-- 기본 탭 스타일 (밑줄 인디케이터) - NonCore, 서브탭 등에 사용 -->
    <Style x:Key="NonCoreTabStyle" TargetType="RadioButton">
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Bd"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 필(Pill) 탭 스타일 - 업로드 페이지 등에 사용 -->
    <Style x:Key="PillTabStyle" TargetType="RadioButton">
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Bd"
                            Background="{StaticResource BlueGray100Brush}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 서브 섹션 탭 스타일 (더 작은 크기) -->
    <Style x:Key="SubTabStyle" TargetType="RadioButton">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Bd"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 내부 탭 버튼 스타일 - 대시보드, 차주개요 등 패널 내부 탭용 -->
    <Style x:Key="InnerTabStyle" TargetType="RadioButton">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Bd"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource BlueGray50Brush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 카드 그림자 효과 -->
    <DropShadowEffect x:Key="CardShadow" 
                      Color="Black" 
                      Opacity="0.08" 
                      BlurRadius="8" 
                      ShadowDepth="2"
                      Direction="270"/>

    <!-- 카드 스타일 (공통) -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
    </Style>

    <!-- 콤팩트 카드 스타일 -->
    <Style x:Key="CompactCardBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 정보 박스 스타일 (통계 등) -->
    <Style x:Key="InfoBoxBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BlueGray50Brush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BlueGray200Brush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- 강조 박스 스타일 -->
    <Style x:Key="HighlightBoxBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <!-- 성공 박스 스타일 -->
    <Style x:Key="SuccessBoxBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SuccessBgBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- 경고 박스 스타일 -->
    <Style x:Key="WarningBoxBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WarningBgBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- 에러 박스 스타일 -->
    <Style x:Key="ErrorBoxBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ErrorBgBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- =============================================== -->
    <!-- 탭 내부 제목행/헤더 통일 스타일 -->
    <!-- =============================================== -->

    <!-- 탭 헤더 영역 스타일 (제목 + 저장버튼 포함 영역) -->
    <Style x:Key="TabHeaderBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 탭 제목 스타일 -->
    <Style x:Key="TabTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeH4}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 탭 설명 텍스트 스타일 -->
    <Style x:Key="TabDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <!-- =============================================== -->
    <!-- 입력 필드 셀 스타일 (피드백 반영: 컬러 구분) -->
    <!-- =============================================== -->

    <!-- 기본 테이블 셀 스타일 -->
    <Style x:Key="TableCellBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource TableBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- 테이블 헤더 셀 스타일 -->
    <Style x:Key="TableHeaderCellBorder" TargetType="Border" BasedOn="{StaticResource TableCellBorder}">
        <Setter Property="Background" Value="{StaticResource TableHeaderBrush}"/>
    </Style>

    <!-- 수기 입력 필드 셀 스타일 (노란색 - 사용자가 직접 입력) -->
    <Style x:Key="ManualInputCellBorder" TargetType="Border" BasedOn="{StaticResource TableCellBorder}">
        <Setter Property="Background" Value="{StaticResource ManualInputBgBrush}"/>
    </Style>

    <!-- 날짜 입력 필드 셀 스타일 (보라색 계열 - 날짜가 들어가는 곳) -->
    <Style x:Key="DateInputCellBorder" TargetType="Border" BasedOn="{StaticResource TableCellBorder}">
        <Setter Property="Background" Value="{StaticResource DateInputBgBrush}"/>
    </Style>

    <!-- 계산 결과 셀 스타일 (파란색 - 자동 계산 결과) -->
    <Style x:Key="ResultCellBorder" TargetType="Border" BasedOn="{StaticResource TableCellBorder}">
        <Setter Property="Background" Value="{StaticResource ResultFieldBgBrush}"/>
    </Style>

    <!-- 읽기 전용 셀 스타일 (회색 - 변경 불가) -->
    <Style x:Key="ReadOnlyCellBorder" TargetType="Border" BasedOn="{StaticResource TableCellBorder}">
        <Setter Property="Background" Value="{StaticResource ReadOnlyFieldBgBrush}"/>
    </Style>

    <!-- =============================================== -->
    <!-- 입력 필드 TextBox 스타일 -->
    <!-- =============================================== -->

    <!-- 투명 TextBox 기본 스타일 (셀 내부용) -->
    <Style x:Key="TransparentTextBox" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- 수기 입력 TextBox 스타일 -->
    <Style x:Key="ManualInputTextBox" TargetType="TextBox" BasedOn="{StaticResource TransparentTextBox}">
        <Setter Property="Background" Value="{StaticResource ManualInputBgBrush}"/>
    </Style>

    <!-- 날짜 입력 TextBox 스타일 -->
    <Style x:Key="DateInputTextBox" TargetType="TextBox" BasedOn="{StaticResource TransparentTextBox}">
        <Setter Property="Background" Value="{StaticResource DateInputBgBrush}"/>
    </Style>

    <!-- 날짜 선택기(DatePicker) 스타일 -->
    <Style x:Key="DateInputDatePicker" TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource DateInputBgBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DateInputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Padding" Value="2,1"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
